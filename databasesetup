CREATE TABLE beeps (
   id SERIAL PRIMARY KEY,
   body TEXT UNIQUE,
   time TIME DEFAULT NOW()
);

CREATE TABLE users (
   id SERIAL PRIMARY KEY,
   username TEXT UNIQUE,
   passhash TEXT NOT NULL,
   email TEXT UNIQUE
);

ALTER TABLE beeps ADD COLUMN authorid INTEGER;

ALTER TABLE beeps
ADD CONSTRAINT id
FOREIGN KEY (authorid)
REFERENCES users(id);
