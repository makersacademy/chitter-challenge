<div id='peep-feed'>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1>Feed View</h1>
    </div>
    <div class="col-md-3"></div>
  </div>

  <% Peep.all.sort_by{ |peep| peep.created_at }.reverse.each do |peep| %>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6" id='peep'>
        <h2><%= peep.user.name %> @<%= peep.user.username %> *
            <%= peep.created_at %><h2>
            <p><%= peep.message %></p>
      </div>
      <div class="col-md-3"></div>
    <div class="row">
  <% end %>
</div>
