<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">
    <style>
      .logo{font-family:"Caveat"}
      a.button{display:inline-block;padding:0.25rem 0.5rem; border:solid 1px rgba(0, 0, 0, .3); border-radius: .25rem; text-decoration: none;transition: box-shadow 200ms}
      a.button:hover{box-shadow:inset 0 0 0 10rem rgba(0, 0, 0, .3);}
      .blue{background-color:#007bff; color:white;}
      .green{background-color:#6c757d; color:white;}
      .round{border-radius:5rem !important;padding-left:1.5rem !important;padding-right:1.5rem !important;}
      .left{float:left;}
      .right{float:right;}
      .keep-center{text-align:center;}
      .keep-right{text-align:right;}
      hr{border-top:rgba(0, 0, 0, 0.1); margin-bottom:2rem;}
      .form_create_account{display:block; padding:1.5rem 1.5rem 0.5rem 1.5rem; border:solid 1px rgba(0, 0, 0, .2); border-radius: .5rem;width:33%;margin-left:33%;}
      .form_create_account:hover{animation: shake 0.82s cubic-bezier(.36,.07,.19,.97) both;}
      .form_create_account input[type="text"]{width:100%; margin-top:1.5rem;text-indent:0.5rem;position:relative; background-color:transparent; color:#222426; z-index:1}
      .form_create_account input[type="submit"]{margin-top:1.5rem;}
      input{font-size:100% !important;}
      .form_create_account > div{text-align:left;position:relative;}
      .form_create_account > div div{display:none;}
      .form_create_account > div > input + label{position:absolute;top:54%;left:0.5rem; transition:all 300ms ease; background-color:transparent; color:#222426; z-index:0; }
      .form_create_account > div:focus-within > label{top:.25rem !important;left:0 !important; color:#626466;}
      .form_create_account > div > input:not(:placeholder-shown) ~ label{top:.25rem !important;left:0 !important; color:#626466;}
      .form_create_account > div > input:invalid:focus ~ div{position:absolute; display:inline-block; left:50%; margin-top:.125rem; transform:translate(-50%,0%);width:100%;}
      .form_create_account > div > input:invalid:focus ~ div::after{content:attr(data-pattern)}
      section > .peep > .header{color:#424446; padding-left:2rem; text-align:right}
      section > .peep > .body{color:#242628;}
      section > .peep > .footer{color:#848688; text-align:right;}
      .create_link{display:block; width:100%; margin-top:1.5rem;}
      .create_link > a{width:33%; margin-left:50%;}
      @keyframes shake {
        10%, 90% {
            transform: translate3d(-1px, 0, 0);
        }
        20%, 80% {
            transform: translate3d(2px, 0, 0);
        }
        30%, 50%, 70% {
            transform: translate3d(-4px, 0, 0);
        }
        40%, 60% {
            transform: translate3d(4px, 0, 0);
        }
      }
      @media screen and (max-width: 600px) {
        .form_create_account {
        width: 100%;
      }
}
    </style>
  </head>
  <body>

    <section class="keep-left" name="Login">
      <a class="button logo" href="/">Chitter</a>
      <a href="/create" class="button right">Create new account</a>
    </section>
    <hr>
    <section name="create" tab-index="0">
      <form class="form_create_account keep-center" action="/register" method="post">
       <div><input type="text" pattern="[a-zA-Z]{3,16}" name="username" placeholder=" " required/><label>User/visible name</label><div data-pattern="only letters 3 to 16 long"></div></div>
       <div><input type="text" pattern="[a-zA-Z0-9]{8,16}" name="password" placeholder=" " required/><label>Password</label><div data-pattern="letters and numbers 8 to 16 long"></div></div>
       <input type="submit" name="submit" value="Sign in"/>
      </form>
    </section>

    <section name="footer">

    </section

  </body>
</html>