<h1>Please sign up for Chitter</h1>

<form action='/users' method='post'>
  <label for='email'>
    Email: <input name='email' type='text' value='<%= @user.email %>' required>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <label for='password_confirmation'>
    Confirm password: <input name='password_confirmation' type='password'>
  </label>
  <label for='name'>
    Name: <input name='name' type='text' value='<%= @user.name %>'>
  </label>
  <label for='username'>
    Username: <input name='username' type='text' value='<%= @user.username %>'>
  </label>
  <input type='submit' value='Register'>
</form>
