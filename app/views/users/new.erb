<h1>Please sign up</h1>

<form action='/users' method='post'>
  <label for='email'>
    Email: <input name='email' type='email' value='<%= @user.email %>'>
  </label>
  <label for='name'>
    Name: <input name='name' type='text' value='<%= @user.name %>'>
  </label>
  <label for='username'>
    User Name: <input name='username' type='text' value='<%= @user.username %>'>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <label for='password_confirmation'>
    Confrim Password: <input name='password_confirmation' type='password'>
  </label>
  <input type='submit' value='Sign up'>
</form>
