<h1>Sign up for Chitter!</h1>

<form action='/users' method='post'>
  <label for='name'>
    Name: <input name='name' type='text' value=" <%= @user.name %>" required>
  <label for='email'>
    Email: <input name='email' type='text' value=" <%= @user.email %>" required>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <label for='password_confirmation'>
    Password: <input name='password_confirmation' type='password'>
  </label>
  <input type='submit' value='Sign up'>
</form>
