<h1>Please sign up</h1>

<form action='/users' method='post'>
  <label for='email'>
    Email: <input name='email' type='text' value='<%= @user.email %>' required><br>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'><br>
  </label>
  <label for='password_confirmation'>
    Confirm Password: <input name='password_confirmation' type='password'><br>
  </label>
  <label for='username'>
    Username: <input name='username' type='text' value='<%= @user.username %>' required><br>
  </label>
  <label for='name'>
    Name: <input name='name' type='text' value='<%= @user.name %>' required><br>
  </label>
  <input type='submit' value='Submit'>
</form>
