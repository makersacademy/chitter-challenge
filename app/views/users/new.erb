<h1>Please sign up</h1>


<form action = '/users' method='post'>
  <p>
  <label for='username'>
    Username: <input name='username' type='text' value='<%= @user.username %>'required>
  </label>
  <p>
  <label for='name'>
    Name: <input name='name' type='text' value='<%= @user.name %>'required>
  </label>
  <p>
  <label for='email'>
    Email: <input name='email' type='email' value='<%= @user.email %>'required>
  </label>
  <p>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <p>
  <label for='password_confirmation'>
    Password: <input name='password_confirmation' type='password'>
  </label>
  <p>
  <input type='submit' value='Sign up'>
</form>
