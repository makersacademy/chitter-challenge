<% if !current_user %>
  <form action="/sessions/new" >
    <input class="btn-flat disabled" type='submit' value='sign in'>
  </form>
<% end %>


<h1 class="textCenter">Sign up</h1>

<form action="/users" method="post">
  <label for="username">
    Username: <input type="text" name="username">
  </label>
  <br/>
  <label for="password">
    Password: <input type="password" name="password">
  </label>
  <br />
  <label for="password_confirmation">
    Confirm password: <input type="password" name="password_confirmation">
  </label>
  <br/>
  <label for="firstname">
    First name: <input type="text" name="firstname">
  </label>
  <br />
  <label for="surname">
    Surname: <input type="text" name="surname">
  </label>
  <br/>
  <label for="email">
    Email: <input type="email" name="email">
  </label>
  <br/>
  <label for="submit_button">
    <input class="btn-flat disabled" type="submit" value="sign up">
  </label>
</form>

<form action="/">
  <label for="cancel_button">
    <input class="btn-flat disabled" type="submit" value="cancel">
  </label>
</form>
