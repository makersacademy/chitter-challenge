<html>
<head>
  <link rel="stylesheet" href="main.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
      <div class="container signup">
        <form action='/users/new' method='POST' class="signupform">
          <p>
            <label for='email_address'><span class="required"></span>
              Email Address:
            </label>
              <input type='email' name='email_address' value='<%= @user.email_address %>' required align="right">
            </p>
            <br>
            <p>
            <label for='password'>
              Password
            </label>
            <input type='password' name='password' align="right">
          </p>
            <br>
            <p>
            <label for='password_confirmation'>
              Password Confirmation
            </label>
            <input type='password' name='password_confirmation' align="right">
            <br>
            <input type='submit' value='sign up'>
          </p>
        </form>
      </div>
    </div>
    <div class="col-sm-3">
    </div>
  </div>
</body>
</html>
