<h1>Please sign up to Chitter</h1>

<form action='/users' method='post'>
  <label for='name'>
    Name <input name='name' type='name' value='<%= @user.name %>' required>
  </label>
  <label for='username'>
    Username <input name='username' type='username' value='<%= @user.username %>' required>
  </label>
  <label for='email'>
    Email: <input name='email' type='email' value='<%= @user.email %>' required>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <label for='password_confirmation'>
    Password: <input name='password_confirmation' type='password'>
  </label>
  <input type='submit' value='Sign up'>
</form>