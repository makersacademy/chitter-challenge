<h1>Please sign up</h1>

<form action ='/users' method='post'>
  <br>Name:                   <input name='name'                    type='text'       value='<%= @user.name %>'></br>
  <br>Username:               <input name='username'                type='text'       value='<%= @user.name %>'></br>
  <br>Email:                  <input name='email'                   type='text'       value='<%= @user.email %>'></br>
  <br>Password:               <input name='password'                type='password'></br>
  <br>Password confirmation:  <input name='password_confirmation'   type='password'></br>
  <input type='submit' value='Sign up'>
</form>
