<h1>Please sign up</h1>

<form action='/users' method='post'>
  <label for='user_name'>
    User Name: <input name='user_name' type='text'
    value='<% @user.user_name %>' required>
  </label>
  <label for='email'>
    Email: <input name='email' type='email' value='<% @user.email %>' required>
  </label>
  <label for='name'>
    Name: <input name='name' type='text' value='<% @user.name %>'>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <label for='password'>
    Password: <input name='password_confirmation' type='password'>
  </label>
  <input type='submit' value='Sign up'>
</form>
