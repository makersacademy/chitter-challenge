<h1>Please sign up</h1>

<form action='/users' method='post'>
  <label for='email'>
    Email: <input name='email' type='email' value='<%= @user.email %>' required>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <label for='password_confirmation'>
    Password: <input name='password_confirmation' type='password'>
  </label>
  <label for='name'>
    Name: <input name='name' type='text'>
  </label>
  <label for='username'>
    Username: <input name='username' type='text' value='<%= @user.username %>' required>
  </label>
  <input type='submit' value='Sign up'>
</form>

<% if flash[:errors] && !flash[:errors].empty? %>
<h2>Please refer to the following errors below:</h2>
  <ul id='errors'>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
