<h2> Please fill in your details to sign up: </h2>

<form action='/users/new' method='post'>
	<input name='name' type='text' placeholder='name' value="<%= @user.name %>" required>
	<input name='email' type='email' value ='<%= @user.email if @user %>' placeholder='email' required>
	<input name='password' type='password' placeholder='password' required>
	<input name='password_confirmation' type='password' placeholder='password confirmation' required>
	<input type='submit' value='Sign Up'>
</form>