<h2><%= @user.name %></h2>

<% if session[:user_handle] %>
<div class="form-group">
  <form id='post-peep' action='/peeps' method='post'>
    <label for="peep_text">Peep:
      <input type='text' name='peep_text' required/>
    </label>
    <input type='submit' value='Post peep' />
  </form>
</div>
<% end %>

<div id='peeps'>
  <% @peeps.each do |peep| %>
    <div class='peep'>
      <div class='name'><%= @user.name %></div>
      <div class='handle'>@<%= @user.handle %></div>
      <div class='message'><%= peep.message %></div>
      <div class='timestamp'><%= peep.timestamp.strftime("%d %b '%y - %H:%M") %></div>
    </div>
  <% end %>
</div>