<doctype html="html">
  <head>
    <title>New peep</title>
  </head>
  <body>
    <style>
      body {
        font-family: "Raleway", "Helvetica", "Arial", sans-serif;
        text-align: center;
        margin: 50px;
        color: #130101c4;
      }
    </style>
    <h1>Post a peep</h1>
    <%= flash[:error] %>
