<h1 id="header">Chitter</h1>
<a href="/" id="home-link">Home</a>
<div id="nav-right">
  <% if current_user %>
    <p id="welcome">Welcome, <%= current_user.name.split.first%> </p>
    <div id="log-out-button">
      <form method='post' action='/sessions'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Sign out' class="button" id="log-out-button">
      </form>
    </div>
  <% else %>
    <div id="log-in-button">
      <form action="/sessions/new">
        <input type="submit" value="Log in" class="button" id="log-in-button">
      </form>
    </div>
    <div id="sign-up-button">
      <form action="/users/new">
        <input type="submit" value="Sign up" class="button">
      </form>
    </div>
  <% end %>
</div>
