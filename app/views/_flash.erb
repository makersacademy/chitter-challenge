<% if flash[:notice] %>
  <div id='notice'><%= flash[:notice] %></div>
<% end %>
<% if flash[:errors] && !flash[:errors].empty? %>
  <p>There is something wrong with your application:</p>
  <ul id='errors'>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
