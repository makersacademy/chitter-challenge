
<% if !(session[:user_id]) %>
<head> Join Chitter </head>
<form action="/user/new">
  <button type="submit" name="Sign up">
    Sign up
  </button>
</form>

<form action="/sessions/new">
  <button type="submit" name="Sign ip">
    Sign in
  </button>
</form>
<% end %>

<% if session[:user_id] %>
<form method="post">
  <input  type="text"   name="text"   placeholder="What are you doing?" required><br>
  <button type="submit" name="Peep">
    Peep
  </button>
</form>
<% end %>


<h1> Peeps </h1>
<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      <%= peep.text %><br>
      By:   <%= peep.user.name %>,
      at:   <%= peep.created_at %><br><br>
    </li>
  <% end %>
</ul>
