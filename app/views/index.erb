<div class="row">
  <div class="col-sm-12 text-right">
    <% if current_user %>
      <form action="/sessions/logout" method="POST">
        <button class="btn btn-default" type="submit">Log out</button>
      </form>
    <% else %>
      <a class="btn btn-default" href="/users/new" role="button">Sign up</a>
      <a class="btn btn-default" href="/sessions/new" role="button">Log in</a>
    <% end %>
  </div>
</div>
<% if current_user %>
  <div class="row">
    <div class="col-sm-12">
      <a class="btn btn-default" href="/peeps/new" role="button">New Peep</a>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col-xs-6 col-sm-4">
    <% @peeps.each do |peep| %>
      <div class="thumbnail">
        <div class="caption">
          <h4 data-test-id="user_name"><%= peep.user.name %> <small>@<%= peep.user.user_name %> | <%= peep.created_at.strftime("%b %d %k:%M") %></small></h4>
          <p class="lead"><%= peep.message %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
