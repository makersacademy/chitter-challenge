<div class="container" style="margin-top:40px">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<strong> Sign in to continue</strong>
				</div>
				<div class="panel-body">
					<form role="form" action="/sessions" method="POST">
						<fieldset>
							<br>
							<div class="row">
								<div class="col-sm-12 col-md-10  col-md-offset-1 ">
									<div class="form-group">
										<div class="input-group">
											<span class="input-group-addon">
												<i class="glyphicon glyphicon-user"></i>
											</span> 
											<input class="form-control" placeholder="Email" name="email" type="text" autofocus required>
										</div>
									</div>
									<div class="form-group">
										<div class="input-group">
											<span class="input-group-addon">
												<i class="glyphicon glyphicon-lock"></i>
											</span>
											<input class="form-control" placeholder="Password" name="password" type="password" required>
										</div>
									</div>
									<div class="form-group">
										<button type="submit" class="btn btn-lg btn-primary btn-block" value="Sign in">Sign in</button>
									</div>
								</div>
							</div>
						</fieldset>
					</form>
				</div>
				<div class="panel-footer ">
					Don't have an account! <a href="/sign_up" onClick=""> Sign Up Here </a>
					<div>Just to see the peeps! <a href="/peeps" onClick=""> Continue as guest </a></div>
				</div>
            </div>
		</div>
	</div>
</div>