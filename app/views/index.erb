<main class="col-7 center">
    <% if current_user %>
    <div class="peep-new">
      <form action="/peep" method="post">
        <textarea name="peep" cols="30" rows="4" placeholder="Post"></textarea>
        <button type="submit" class="btn btn-default">Add message</button>
      </form>
    </div>
    <% end %>
  <% if @peeps!=[] %>
  <article class="peeps">
    <ul>
      <% @peeps.each do |peep| %>
      <li class="peep-item">
        <header>
          <p>
            <% @author = User.first(id: peep.user_id) %>
            <%= @author.name %>
            <span><%=@author.username%></span>
            <small><%= peep.posted_at %></small>
          </p>
        </header>
          <p><%= peep.message %></p>
      </li>
      <% end %>
    </ul>
  </article>
  <%else %>
    <p>No peeps was posted yet!</p>
  <%end%>