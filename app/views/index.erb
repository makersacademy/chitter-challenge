<h1> Peeps </h1>

<form action="peeps/new" method="post">
  <input type="text" name="message">
  <input type="submit" value="Submit">
</form>

<ul id="peeps">
  <% @peeps.reverse.each do |peep| %>
    <h3><%= peep.message %><br></h3>
    <h4><%= @users.get(peep.user_id).name %> <%= peep.created_at.strftime('%I:%M:%S %p') %></h4>
  <% end %>
</ul>
