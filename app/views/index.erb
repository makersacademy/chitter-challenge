<div class="row">
  <div class="col-md-12">
    <h1>Chitter</h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-3">
    <% @peeps.each do |peep| %>
      <div class="thumbnail">
        <div class="caption">
          <h4><%= peep.user.name %> <small>@<%= peep.user.user_name %> | <%= peep.created_at.strftime("%b %d %k:%M") %></small></h4>
          <p class="lead"><%= peep.message %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
