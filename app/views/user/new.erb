  <br>
  <br>
  <input type='password' name='password' placeholder="Password:">
  <br>
  <br>
  <input type='password' name='password_confirmation' placeholder="Confirm password:">
  <br>
  <br>
  <input type='text' name='name' value='<%= @new_user.name %>' placeholder="Name:">
  <br>
  <br>
  <input type='text' name='user_name' value='<%= @new_user.user_name %>' placeholder="User name:">
  <br>
  <br>
  <input type='submit' value='Sign up'>
</form>

