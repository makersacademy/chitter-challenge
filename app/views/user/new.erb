<% if flash[:errors] && !flash[:errors].empty? %>
  Error:
  <ul id='errors'>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<form action='/user/add' method='post'>
