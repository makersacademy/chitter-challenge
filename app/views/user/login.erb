<h1>Sign in</h1>
<br />
or <a href="/user/new">sign up</a>
<br />
<% if flash[:notice] %>
  <div id='notice'><%= flash[:notice] %></div>
<% end %>
<form action="/user/authenticate" method="post">
  <label>Email:
    <input type="text" name="email">
  </label>
  <br />
  <label>Password:
    <input type="password" name="password">
  </label>
  <br />
  <input type="submit" value="Sign In">
</form>
