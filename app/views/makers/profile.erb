<head>
  <style>
    .chitter {
    font-family: 'courier new';
    font-style: normal;
    color: rgb(0, 102, 204);
    }
  </style>
</head>


<body class='chitter'>

  <p>

    <b><%=@maker.username%></b> is currently
    <% if current_maker == @maker %>
      <b>online</b>
    <% else %>
      <b>offline</b>
    <%end%>

  </p>

  <p>

    <b><%=@maker.username%></b>'s peeps:

  </p>

  <p>

    <% @peeps.reverse! %>
    <% @peeps.each do |peep| %>
      <%=peep.maker.username%> peeped:<br/>
      <b>&nbsp;<%=peep.text%></b><br/>
      on: <%=peep.time.strftime('%b %d at %R')%><br/>
      <form action='/peeps/comments/<%=peep.id%>'>
        <input type='submit' value='comments(<%=peep.comments.count%>)'>
      </form>
    <% end %>

  </p>

  <p>

    <form action='/peeps'>
      <input type='submit' value='see all peeps'>
    </form>

  </p>

</body>
