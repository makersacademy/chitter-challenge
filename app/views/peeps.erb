<div>
<h1>Chitter</h1>
</div>
<div>
  <form action='/peeps' method='post'>
    <label for="content">
      <input type='text' name='peep' placeholder="What's happening today?">
    </label> 
    <button type='submit'> Post </button>
  </form>
</div>
<h2>Peeps</h2>
<br>

<ul>
<%@peeps.map do |peep| %>
  <li> <%= peep.content %>, created at <%= peep.created_at %> </li>
</ul>
  <% end %>
