<h1> Peeps </h1>

<ul id = 'peeps'>
  <% @peeps.each do |peep| %>
  <li>
    <a><%= current_user.username %></a>
    <br />
  	Said: <a><%= peep.peep %></a>
    <br />
    At: <a><%= peep.time %></a>
  </li>
  <% end %>
</ul>

<form action="/new_peep">
  <input type="submit" value="New Peep">
</form>
