<link rel="stylesheet" href="css.css" type="text/css" /> 

<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body class="centered-wrapper">
    <header>
      <h1> Peeps! </h1>
    </header>
      <div>
        <% if current_user %>
        <div id='peep_form'>
          <form action='/peeps' method='post'>
            <label for='peep'>
              Peep away:
              <div>
                <textarea name='peep' maxlength='140' placeholder='Peep here...' cols='35' rows='4'></textarea>
              </div>
            </label>
            <input class="button" type='submit' value='Post my peep'>
          </form>
        </div>
        <% else %>
          <h3>
            <a href="/sessions/new"> Sign in </a> to post a peep
          </h3>
        <% end %>
      </div>
      <br>
      <div>
        <dl id='peeps'>
          <% @peeps.each do |peep| %>
            <dt>"<%= peep.body %>"</dt>
            <dd>by <%= peep.name %> @<%= peep.user_name %> - <%= peep.creation_date %></dd>
            <br>
          <% end %>
        </ul>
      </div>
  </body>
</html>

