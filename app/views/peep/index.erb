<style type="text/css">
    .bs-example{
    	margin: 20px;
    }
</style>
<div class="bs-example">
    <form class="form-horizontal" action="/peep/post" method="post">
        <div class="form-group <%= 'has-error' if flash[:error]%>">
            <label class="col-xs-2 control-label" for="peep">Post Peep</label>
            <div class="col-xs-5">
                <textarea id="peep" maxlength="140" name="peep" class="form-control"
                 rows="6" placeholder="Enter your peep"></textarea>
                <% if flash[:error] %>
                  <span class="help-block"><%= flash[:error] %></span>
                <% end %>
            </div>
        </div>
        <div class="form-group">
           <div class="col-xs-offset-2 peep">
               <input type="submit" class="btn btn-primary" value="Peep">
           </div>
       </div>
     </form>
</div>
