<ul>
  <% @peeps.each do |peep| %>
    <li >
      <%= peep.message %> 
        <ul>
          <li>
            <a href="/user/<%= peep.user.id %>" target="_blank">
              Author: <%= peep.user.username %>
            </a>  
          </li>
          <li>
            <%= peep.created_at%>
          </li>
        </ul>  
    </li>
  <% end %>
</ul>