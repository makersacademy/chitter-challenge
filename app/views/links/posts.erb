#flash welcome message on sign up!/sign in!

<h1>Chitters of the day!</h1>

<% if current_user %>
<h2>New Post</h2>
<form action='/new_post' method='post'>
  <textarea name="chit" cols="35" rows="3" placeholder="What's up?">
  </textarea>
  <input type='submit' value='Post!'>
</form>
<% else %>
<h3>You must be signed in to post</h3>
<% end %>

<h2>Recent Posts</h2>

<% @posts.reverse.each do |post| %>
  <li>
   #link to a specific user?
    By: <%= post.user.username%><br>
    <%= post.chit %><br>
    Posted: <%= post.time %><br><br>
  </li>
<% end %>
