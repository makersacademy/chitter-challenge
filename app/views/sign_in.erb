<html>

<body>
  <h1>Sign in</h1>
  <% if @error %>
  <p class="error"><%= @error %></p>
  <% end %>
  <form action="/sign_in" method="POST">
    <input name="username" placeholder="Username" />
    <input name="password" type="password" placeholder="Password" />
    <input type="submit" value="Sign In" />
  </form>
</body>

</html>