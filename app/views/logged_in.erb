<h1> Create Peep </h1>

<form action='/peeps' method='POST'>
  <label for='content'>
    Peep your thoughts!
    <input type='text' name='content'>
    <input type='hidden' name='created_at' value= <%= Time.new %> >
     <input type='hidden' name='time' value= <%= Time.new.strftime("%H:%M") %> > 
     <input type='submit' value='Peep!'>
</form>


<% @peeps.reverse.each do |peep|%>
