<% if current_user %>
  <div class='navbar-text'>
  Welcome, <%= current_user.username %>
  </div>
  <form class="navbar-form navbar-right" method='post' action='/sessions'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' class="btn btn-default" value='Sign out'>
  </form>
  <% else %>
  <form class='navbar-form navbar-right' action='/sessions/new'>
    <input type='submit' class="btn btn-default" value='Log In'>
  </form>
  <form class="navbar-form navbar-right" action='/users/new'>
    <input type='submit' class="btn btn-default" value='Sign Up'>
  </form>
<% end %>
</div>
