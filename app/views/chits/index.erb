<div id="chits"class="row">
<% @chits.each do |chit| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= User.get(chit.user_id).username.capitalize %>  
    </div>

    <div class="panel-body">
      <%= chit.message %>
    </div>

    <div class="panel-footer">
      <%= chit.time.ago_in_words %>
    </div>

  </div>
<% end %>
</div>
