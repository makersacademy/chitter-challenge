<div class="row" id="chits">
<% @chits.each do |chit| %>
  <div class="panel panel-default">
    
    <div class="panel-body">
      <%= chit.message %>
    </div>

    <div class="panel-footer">
      <%= chit.time.strftime('Chitted at %H:%M on %a %-d %b %y') %>
    </div>

  </div>
<% end %>
</div>
