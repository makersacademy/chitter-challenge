<% if current_user %>
  <h3>Post your peep!</h3>

  <form class="signform" action="/peeps/new" method="post">
    <div>
      <label for="message">Message:</label>
      <textarea name="message" maxlength="150"></textarea>
    </div>
    <div>
      <button type="submit">Post</button>
    </div>
  </form>
<% end %>
