<h2>Peep</h2>
<form action="/peeps" method="post">
  <div>
    <input type="text" name="message" placeholder="peep" required>
  </div>
  <div>
    <input type="submit" value="Peep">
  </div>
</form>
<section class="peep-list">
  <h4>Peeps</h4>
  <% @peeps.each do |peep|%>
    <article class="peep">
      <p>
        <%= peep.text %>
      </p>
      <p>
        <%= peep.user.username %>
      </p>
      <p>
        <%= peep.time_ts %>
      </p>
    </article>
  <% end %>
</section>
