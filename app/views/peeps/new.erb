<div class='container d-flex flex-column align-items-center'>
  <h2 class='align-self-start'> do a peep... </h2>
  <br>
  <% if current_user %>
    <form class="form-column text-center w-100" action='/peeps' method='POST'>
      <div class="form-group">
        <label for='message' class="control-label mb-4">Message:</label>
        <div class="">
          <input class="form-control form-control-lg" type='text' name ='message' placeholder="Message" maxlength="140" required>
        </div>
      </div>
      <div class="form-group">
        <br>
        <input class="btn btn-primary" type='submit' value='Done!'>
      </div>
    </form>

  <% else %>

  Sign in to peep!

  <% end %>
</div>
