<h1>Home</h1>

<% if current_user %>
  <form action='/peeps/new' method='post'>
    <input type='text' name='peep' placeholder = 'Whats on your mind?' required>
    <input type='submit' value='Peep'>
  </form>
<% else %>
  <h3> You must be logged in to peep </h3>
<% end %>

<% if @peeps && !@peeps.empty? %>
  <ul id='peeps'>
    <% @peeps.each do |peep| %>
      <li>(<%=peep.user.name%>) @<%=peep.user.username%>: <%=peep.text%>(<%=peep.created_at%>)</li>
    <% end %>
  </ul>
<% end %>
