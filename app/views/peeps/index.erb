<% if current_user %>
Welcome, <%=  @current_user.name %>
<% end %>
<ul>
<% @peeps.reverse.each do |peep|  %>

  <div class="peep_box">
    <li><%= peep.text %>
        <%= peep.posted_on.strftime("%d/%m/%Y %H:%M") %>
        <%= peep.user.name %>
        <%= peep.user.handle %>
    </li>
  </div>

<% end %>
</ul>