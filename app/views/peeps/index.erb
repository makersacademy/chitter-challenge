<link rel="stylesheet" type="text/css" href="/css/style.css">
<h1> Peeps </h1>
  <p><form action='/peeps/new'>
      <input type="submit" value="Add a new peep" />
  </form></p>
<ul id='peeps'>
  <% @peeps.reverse! %>
  <% @peeps.each do |peep| %>
    <li style="list-style: none;">
    <% time = peep.created_at %>
    <b><p><%= peep.nickname %></b>&nbsp&nbsp <%= time.strftime("Peeped on %d/%m/%Y at %I:%M%p") %></p>
    <b><textarea rows='4' cols='50' name='message' disabled><%= peep.message %></textarea></b>
    </br></br>
    <form action='/comments/new' method='POST'>
      <textarea name='comment_ta' id='comment_ta' rows='4' cols='50'
        placeholder = 'Comment on peep here!' ></textarea>
      <p><input type='submit' value='Comment' id='x'/></p>
    </form>
    </li>
    </br><hr></br>
  <% end %>
</ul>
