<div class="col-sm-6 col-sm-offset-3">

  <% if current_user %>
  <form action="/peeps" method="POST" >
    <div class="input-group">
      <input class="form-control input-lg" type="text" name="message">
      <span class="input-group-btn">
        <button class="btn btn-primary btn-lg" type="submit">Add Peep</button>
      </span>
    </div>
  </form>
  <br>
  <% end %>

  <ul id='peeps' class="list-group">
    <% @peeps.each do |peep| %>
      <li class="list-group-item">
        <p class="list-group-item-text"><%= peep.message %></p>
        <p class="list-group-item-text text-muted">
          <small>@ <%= peep.created_at.strftime('%R') %> on <%= peep.created_at.strftime('%v') %></small>
        </p>
      </li>
    <% end %>
  </ul>

</div>
