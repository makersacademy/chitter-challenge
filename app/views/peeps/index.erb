<% unless current_user %>
    <form action='/users/sign_up'>
      <input type='submit' value='Sign up'>
    </form>
    <form action='/users/sign_in'>
      <input type='submit' value='Sign in'>
    </form>
<% end %>

<h1> Peeps </h1>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      <%= User.first(id: peep.user_id).username %> posted:
      <strong><%= peep.body %></strong> on:
      <%= peep.time_posted.strftime('%c') %>
    </li>
  <% end %>
</ul>

<% if current_user %>
  <form action='/peeps/post'>
    <input type='submit' value='peep'>
  </form>
<% end %>
