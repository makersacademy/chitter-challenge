<h1> Peeps </h1>
<form class="add_new_peep" action="/peeps/add" method="post">
  Add new peep: <input type="submit" value="New Peep">
</form>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      handle:         <%= peep.handle %>
      peep_content:   <%= peep.peep_content   %>
    </li>
  <% end %>
</ul>
