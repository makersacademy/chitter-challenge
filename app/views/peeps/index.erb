<h1> Chitter  </h1>

<br>
<% if !current_user %>
  <form action='/users/new' method='get'>
    <input type='submit' value='Sign up'>
  </form>
  <br>

  <form action='/sessions/new' method='get'>
    <input type='submit' value='Log in'>
  </form>
<% end %>


<ul id='peeps' transform: rotate(180deg)>
  <% @peeps.each do |peep| %>
    <li>
      <%= peep.content %>
      <br>
      Posted on <%= peep.created_at.strftime("%l:%M %p - %d %b %Y") %>
      <br>
      Posted by <%= peep.author %>

    </li>
  <% end %>
</ul>