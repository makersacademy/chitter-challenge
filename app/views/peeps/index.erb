<h1>Tips</h1>

<style>
ul {
    transform: rotate(180deg);
}
ul > li {
    transform: rotate(-180deg);
}
</style>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      <%= peep.text %>
    </li>
  <% end %>
</ul>

<form action='/peeps/new' method='get'>
  <button type='submit'>
    Write new tip
  </button>
</form>
