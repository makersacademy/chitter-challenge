<html>
  <style>
  </style>

  <body>
    <h1>Chitter</h1>
    <% if current_user %>
      <h2>Welcome, <%= current_user.username %>!</h2>
    <% end %>

    <form action='/peeps/new' method='GET'>
      <input type='submit' value='New Peep'>
    </form>

    <h2> Latest peeps</h2>

    <ul id='peeps'>
      <% @peeps.each do |peep| %>
      <li>
         <%= peep.content %><br>
         <%= peep.created_at.strftime("Peeped on %d/%m/%Y, at %I:%M%p") %>
      </li>
      <% end %>
    </ul>
  </body>
</html>
