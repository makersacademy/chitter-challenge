<form action='/peeps' method='post'>
Add a message:
  <label for='message'>
    <input type='text' name='message' required>
  </label>
  <input type='submit' name='Submit' value='Submit'>
</form>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      Message: <%= peep.message %>
    </li>
  <% end %>
</ul>
