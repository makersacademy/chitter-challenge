
<h1> Here's the peeps! </h1>

<ul id='peeps'>
  <% @peeps.reverse.each do |peep| %>
    <li>
      <%= peep.name %>
      (<%= peep.username %>) wrote
      '<%= peep.message %>' at
      <%= peep.time %>
    </li>
  <% end %>
</ul>


<form action='/peeps/new' method='get'>
<input type='submit' value='Write a Peep'class="button">
</form>
