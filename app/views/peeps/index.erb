<div id='peepscontent'>

<div id='newpeep'>
  <% if current_user %>
    <form action='/postpeep' method='post'>
      <textarea placeholder='Write a new peep' type='text' name='new_peep'></textarea><br>
      <input class='signbutton' type='submit' value='Submit'>
    </form>
  <% end %>
</div>

<div class='peeplist'>
<ul id='peeps'>
  <% @peeps.reverse.each do |peep| %>
    <li id='peep'>

        <p id='peepheader'>
          <strong id='peeptitle'><%= peep.user.name %> (<%= peep.user.username %>)
          </strong>
          <span id='time'>@ <%= peep.time_string %></span>

        <p id='peepbody'>
          "<%= peep.text %>"
        </p>

    </li>
  <% end %>
</ul>
</div>



</div>
