<link rel="stylesheet" href="reset.css">
<link rel="stylesheet" href="styles.css">

<div class="container">


  <h1 class="h1_peeps"> Peeps </h1>
  <form class="add_new_peep" action="/peeps/add" method="post">
    Add new peep: <input class="button" type="submit" value="New Peep">
  </form>

  <ul id='peeps'>
    <% @peeps.each do |peep| %>
      <div class="peep_box">
        <li class="li_username"><%= get_user_name(peep.user_id) %></li>
        <li class="li_peep"><%= peep.peep_content   %>.</li>
        <li class="li_time"><%= peep.created_at.strftime("%d %a %H:%M")   %></li>
      </div>
    <% end %>
  </ul>

</div>
