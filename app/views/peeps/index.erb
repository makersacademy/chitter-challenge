<h1>Peeps</h1>
<ul id="peeps">
  <%@peeps.reverse.each do |peep| %>
  <li>
  <span style="font-size:0.8em">
  Posted by <%= peep.user.username %>
  at <%= (peep.time).strftime("%b %e, %l:%M %p")%>
  </span>
  <p><%= peep.message %></p>
  </li>
  <% end %>
</ul>
<% if current_user %>
<a href="/peeps/new"><button>Post a peep</button></a>
<% else %>
<a href="/signup"><button>Sign up</button></a>
<a href="/sessions/new"><button>Log in</button></a>
<% end %>
