<h1 class='center'>Peeps</h1>

<% unless @peeps.nil?%>
  <% @peeps.reverse_each do |peep| %>
    <div class='center'>
      <p>username: <%=peep.user.username%><br></p>
      <p1><%= peep.content %><br></p1>
      <p>Posted: <%=peep.created_at.strftime("%e %B %k:%M")%></p>
    </div><br>
  <% end %>
<% end %>

