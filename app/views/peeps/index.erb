<div>
  <% if current_user %>
    <form action="/sessions" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Sign out">
    </form>
  <% else %>
    <form action="/sessions/new">
      <input type="submit" value="Sign in">
    </form>
    <form action="/users/new">
      <input type="submit" value="Sign up">
    </form>
  <% end %>
</div>

<h1>Welcome to CHITTER!</h1>

<div class="peeps">
  <% if current_user %>
    <div class='new_peep'>
      What's on your mind?
      <form action="/peeps" method="post">
        <textarea name="peep_text" rows="3"></textarea>
        <input type="submit" value="Peep">
      </form>
    </div>
  <% end %>

  <% if @peeps %>
    <% @peeps.each do |peep| %>
      <div class="peep">
        <div class="peeper"><b><%=peep.user.username%></b> <i> - <%=peep.user.name%></i></div>
        <div class="peep_date"><%=peep.created_at.strftime('%F %T')%></div>
        <p><%=peep.peep_text%></p>
      </div>
    <% end %>
  <% end %>
</div>
