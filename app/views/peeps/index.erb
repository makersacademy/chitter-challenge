<h1> Peeps </h1>
<form class="add_new_peep" action="/peeps/add" method="post">
  Add new peep: <input type="submit" value="New Peep">
</form>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      Peep:       <%= peep.peep_content   %>.
      Date/Time:  <%= peep.created_at   %>
    </li>
  <% end %>
</ul>
