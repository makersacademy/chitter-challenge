<% if current_user %>
<form action='/peeps/new'>
  <input type='submit' value='Post a Peep'>
</form>
<% end %>

<h1> Peeps </h1>

<ul id="peeps">
  <% @peeps.each do |peep| %>
    <li>
       By <%=(peep.name).split.map(&:capitalize).join(' ')%>, @<%= peep.username %> <br>
       Peep: <%= peep.message %><br>
       Time: <%= peep.created_at %><br>
    </li>

  <% end %>
</ul>
