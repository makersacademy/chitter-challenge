<% if !current_user %>

<form action="/login">
  <input type="submit" value="Login">
</form>

<form action="/signup">
  <input type="submit" value="Sign up">
</form>

<% end %>

<h1> Peeps </h1>

<ul id="peeps">
  <% @peeps.each do |peep| %>
  <li>
    <%= peep.content %>
    <%= peep.name %>
    <%= peep.username %>
    <%= peep.created %>
  </li>
  <% end %>
</ul>
