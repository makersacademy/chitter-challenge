<h1> Peeps </h1>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      Content: <%= peep.content %>
      Time Created:   <%= peep.created_at   %>
    </li>
  <% end %>
</ul>

<% if logged_in? %>

<div class="container">
  <p>Type your peep below:</p>
  <form>

    <div class="form-group">
      <div class="row">
        <div class="col-md-4 col-md-offset-3">
          <label for="comment"></label>
          <textarea class="form-control" rows="5" id="comment"></textarea>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-4 col-md-offset-3">
          <button type="submit" class="btn btn-primary btn-primary-spacing">Submit</button>
        </div>
      </div>
    </div>

  </form>
</div>


<% end %>
