<h1> Peeps </h1>

<% if current_user %>
  <form action='/peeps/new'>
    <input type='submit' value='new peep' />
  </form>
<% end %>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
  <li>
    <%= peep.user.name %>
    <%= peep.user.username %>
    <%= peep.message %>
    <%= peep.created_at.strftime("peeped at %H:%M %d.%m.%Y") %>
  </li>
  <% end %>
</ul>