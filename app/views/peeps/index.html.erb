
<h1>Listing Peeps</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Handle</th>
    <th>Message</th>
    <th>Time</th>
    <th></th>
  </tr>

  <% @peeps.reverse.each do |peep| %>
    <tr>
      <td><%= peep.id %></td>
      <td><%= peep.name %></td>
      <td><%= peep.handle %></td>
      <td><%= peep.msg %></td>
      <td><%= peep.created_at.strftime('%R %v') %></td>
      <td><%= link_to 'Show', peep_path(peep) %></td>
    </tr>
  <% end %>
</table>


<%= link_to 'New peep', new_peep_path %>
