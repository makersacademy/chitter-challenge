<p id="notice"><%= notice %></p>

<h1>Peeps</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @peeps.each do |peep| %>
      <tr>
        <td><%= peep.content %></td>
        <td><%= peep.user_id %></td>
        <td><%= link_to 'Show', peep %></td>
        <td><%= link_to 'Edit', edit_peep_path(peep) %></td>
        <td><%= link_to 'Destroy', peep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Peep', new_peep_path %>
