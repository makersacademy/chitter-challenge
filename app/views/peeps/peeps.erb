<!-- Main page showing peeps(tweets) -->
<% if !current_user %>
<h1> Welcome to Chitter Homepage </h1>

<form action="users/new" method="GET" >
  <input type="submit" value="Sign Up">
</form>
<% end %>

<h1> Peeps around the world </h1>

<ul id='peeps'>
  <% @peep.reverse.each do |peep| %>
    <li>
      <%= peep.peep_content %>
      posted @<%= peep.created_at.strftime("%H:%M %d/%m/%Y")   %> by @<%= peep.user.username  %>
    </li>
  <% end %>
</ul>
