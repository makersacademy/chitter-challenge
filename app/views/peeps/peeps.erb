<% if current_user %>
  <form action='/peeps/new' method='post'>

    <div class="peep_field">
      <label for "new_peep">New Peep</label>
      <input type="text" name="new_peep"/>
    </div>
    <div class="button">
      <button type="submit">Peep</button>
    </div>

  </form>
<% end %>

<% if !current_user %>
  <div class="log_in_button">
    <form action='/sessions/new'method='get' >
      <input type='submit' value='Log in'>
    </form>
  </div>
<% end %>

<div class="peep_feed">
  <ul>
  <% Peep.each do |peep| %>
    <li><%= peep.message %></li>
  <% end %>
  </ul>
</div>

<% if current_user %>
  <div class='log_out_button'>
    <form method='post' action='/sessions'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Log out'>
    </form>
  </div>
<% end %>
