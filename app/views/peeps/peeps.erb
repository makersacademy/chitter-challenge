<head>
  <link rel="stylesheet" type="text/css" href="./app/assets/stylesheets/listings.css">
</head>

<% if current_user.nil? %>
  Please <a href="/">sign up or log in</a> to be able to post peeps!
<% end %>

<center><h1>Peeps</h1>

<ul id="peeps" style="list-style-type:none">
  <% @peeps.sort{|x,y| y.time <=> x.time}.each do |peep| %>

    <li><b>User:</b> <%= peep.name %></li>
    <li><b>Time:</b> <%= peep.short_time %></li>
    <li><%= peep.content %></li>
    <p>
  <% end %>
</ul>


<% if current_user %>
  Fancy posting a peep of your own, <%= current_user.name %>?

  <div name="Post peep">
    <form action="/postpeep" method="post">
      <input type="text", name="peep">
      <input type="submit", value="Post Peep">
    </form>
  </div>
<% end %>
</center>
