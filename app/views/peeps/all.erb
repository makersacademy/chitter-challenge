<h1>
  Welcome
  <% if current_user %>
    <%= current_user.username %>
  <% else %>
    to Chitter
  <% end %>
</h1>

<% if current_user %>
  <a href="/peeps/new"><button>New peep</button></a>
<% end %>

<!-- TODO: extract to partial -->
<% if flash[:notice] %>
  <div id="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<section id="peeps">
  Recent activity:
  <% @peeps.each do |peep| %>
    <div class="peep">
      <span class="name"><%= peep.user.name %></span>
      <span class="handle">@<%= peep.user.username %></span>
      <p>
        <%= peep.content %>
      </p>
      <span class="timestamp">
        <%= peep.created_at.strftime('%a, %d %b %Y at %l:%M %p') %>
      </span>
    </div>
  <% end %>
</section>
