<div id="newPeep" class="w3-modal">
  <div class="w3-modal-content">
      <form class="w3-container w3-card-4 w3-light-grey w3-text-green" action='/peeps' method='post'>
        <span onclick="document.getElementById('newPeep').style.display='none'"
            class="w3-button w3-display-topright">&times;</span>
        <h2 class="w3-center">New Peep</h2>

        <div class="w3-row w3-section">
          <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
          <div class="w3-rest">
            <input id="message" class="w3-input w3-border" name="message" type="text" placeholder="Message">
          </div>
        </div>

        <div class="w3-row w3-section">
          <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
          <div class="w3-rest">
            <input id="tag" class="w3-input w3-border" name="tag" type="text" placeholder="Tag">
          </div>
        </div>

        <button class="w3-button w3-block w3-section w3-green w3-ripple w3-padding">Post</button>

      </form>
  </div>
</div>
