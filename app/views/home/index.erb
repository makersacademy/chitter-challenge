<%= partial :head %>

<div class="container">
<% if current_user %>
<div class='ProfileCard'>
  <div class='ProfileCard-userfields'>
    <div class='ProfileCard-name'>
      <p>Welcome <%= current_user.name %><span class='ProfileCard-username'> @<%= current_user.username %></span></p>

    </div>
  </div>
  <!-- <div class='peep-add'>
    <div class='peep-box'>
      <form class='peep-form pure pure-form-stacked' action='/peep/new' method='POST'>
        <input class='peep-content' type="textarea" name='message' placeholder="what's going on?" maxlength='140'>
        <input class='peep-button' type='submit' value='Peep'>
      </form>
    </div>
  </div> -->
  <div class="logout-button">
    <form action='/sessions' method='POST'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Log out'>
    </form>
  </div>
</div>
<% end %>

<div class="actions">
<% if !current_user %>
  <div class='sign-up-link'>
    <p>Sign up to join the fun.</p>
    <a href='/signup' class="btn">Sign up</a>
  </div>
  <div class='log-in-link'>
    <p>Have an account?</p>
    <a href='/' class="btn">Log in</a>
  </div>
<% end %>
</div>

<div class='peep-stream'>
  <% if current_user %>
  <div class='peep-add'>
    <div class='peep-box'>
      <form class='peep-form pure pure-form-stacked' action='/peep/new' method='POST'>
        <input class='peep-content' type="textarea" name='message' placeholder="what's going on?" maxlength='140'>
        <input class='peep-button' type='submit' value='Peep'>
      </form>
    </div>
  </div>
  <% end %>
  <ul class='stream-items' id='peeps'>
  <% @peeps.each do |peep| %>
    <li class='stream-item'>
      <p class='peep-name'><%= peep.user.name %> <span>@<%= peep.user.username %></span></p>
      <p class='peep-message'><%= peep.message %></p>
      <p class="peep-time"><%= peep.timestamp %></p>
    </li>
    <% end %>
  </ul>
</div>
</div>
