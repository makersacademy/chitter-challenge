<!DOCTYPE html>
<html>
  <body>

    <% if current_user %>
      <%= current_user.user_name %> is logged in.
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
      <% flash[:errors].each do |error| %>
        <li> <%= error %> </li>
      <% end %>
    <% end %>

    <%=yield%>
    
  </body>
</html>


