<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>

  <body>
    <% if current_user %>
    Welcome, <%= current_user.name %>
    <% end %>
    <% if current_user %>
    Welcome, <%= current_user.email %>
    <form method='post' action='/session'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Sign Out'>
    </form>
    <% end %>
    <% if flash[:notice] %>
    <div id='notice'>
      <%= flash[:notice] %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
