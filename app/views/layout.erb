<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <% if current_user %>
      Welcome, <%= current_user.user_name %>
      <form method='post' action='/sign-out'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Sign out'>
      </form>
    <% end %>
    <% if flash[:notice] %>
      <div id='notice'>
      <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
