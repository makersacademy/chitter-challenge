<!doctype html>
<html>
  <head>
    <title>Welcome to Chitter!</title>
    <link rel="stylesheet" type="text/css" href="<%= url('/styles.css') %>"/>
  </head>

  <body>
    <div id='container'>
      <div id='mainbar'>Welcome to Chitter!

        <div id='sign_up_sign_in'>
          <% if current_user %>
            <div id='welcome'> Hi, <%= current_user.name %>! </div>
          <% else %>
            <div id='signup'>
              <form action='/signup'><input type='submit' value='Sign Up'/></form>
            </div>
            <div id='signin'>
              <form action='/signin'><input type='submit' value='Sign In'/></form>
            </div>
          <% end %>
        </div>
      </div>
      <%= yield %>  <!-- this then yields to the view which has been called by your controller -->

    </div>


  </body>
</html>
