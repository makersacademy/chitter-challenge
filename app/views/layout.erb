<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Chitter</title>
  </head>
  <body>

    <% if flash[:notice] %>
      <div id='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if current_user %>
      Welcome, <%= current_user.name %>
      <form action="/sessions" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Sign out">
      </form>
    <% else %>
      <a href="/sessions/new">Sign in</a> or <a href="/users/new">Sign up</a>
    <% end %>

    <%= yield %>

  </body>
</html>
