        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <br />
        </div>
        <div class="col-sm-6">
          <% if current_user %>
            <h3>Welcome <%= current_user.name %>!</h3>
          <% end %>
          <%= partial :flash %>
        </div>
        <div class="col-sm-3">
          <br />
        </div>
      </div>

          <%= yield %>

    </div>
