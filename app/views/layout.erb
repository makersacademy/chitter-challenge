<html>
  <head>
    <title>Chitter App</title>
  </head>
  <body>
    <div id='title'><h1>Chitter</h1></div>
    <%if @username%>
      <div id='welcome'>
        <h2>Welcome  <%=@username%></h2>
      </div>
      <%elsif @user%>
      <a href="/sign_up">
        <button>Sign Up!</button>
      </a><br />
      <a href="/sign_in">
        <button>Sign In!</button>
      </a>
      <%else%>
    <%end%>
    <div id='main'>
      <%= yield %>
    </div>
  </body>
</html>
