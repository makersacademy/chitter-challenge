<html>
  <head>
    <title>Chitter!</title>
  </head>

  <body>

    <% if current_user %>
      Welcome, <%= current_user.username %>
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
      Please refer to the following errors below:
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>

    <%= flash[:notice] %>

    <%= yield %>

  </body>
</html>
