<!doctype html>
<html>
<head><title>Chitter</title></head>

<body>
  <% if flash[:errors] && !flash[:errors].empty? %>
    Sorry, your passwords don't match
    <ul id="errors">
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>

  <% if current_user %>
    Welcome, <%= current_user.email %>
  <% end %>

  <%= yield %>
</body>
</html>
