<!DOCTYPE html>
<html>
  <head>
    <title>Peeps</title>
  </head>

  <body>
    <% if current_user %>
      Welcome, <%= current_user.name %>
    <% end %>
    <% if flash[:errors] %>
    <div id='errors'>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end  %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
