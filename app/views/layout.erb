<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <% if current_user %>
      Hello, <%= current_user.name %>
      <form method='post' action='/sessions'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Sign out'>
      </form>
    <% end %>

<% if flash[:notice] %>
  <div id='notice'><%= flash[:notice] %></div>
<% end %>
<% if flash[:errors] %>
  <div id='errors'><%= flash[:errors] %></div>
<% end %>
    <%= yield %>
  </body>
</html>
