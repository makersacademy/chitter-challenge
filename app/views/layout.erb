<!DOCTYPE html>
<html>
  <head>
    <title>
      Chitter
    </title>
  </head>
  <body>
    <% if !current_user%>
    <form action="/user/new" method="get">
      <label for="sign_up">
        Sign up here!
        <input type="submit" value="Sign Up">
    </form>

    <form action='/sessions/new' method="get">
    <label for="sign_in">
      Sign in here!
      <input type="submit" value="Sign In">
    </form>
    <% end %>

    <% if current_user %>
      <h1> <%= current_user.user_name%>'s Chitter!</h1>
      <form action='/sessions' method="post">
        <input type="hidden" name="_method" value="delete">
      <label for="sign_out">
        Sign out here!
        <input type="submit" value="Sign Out">
      </form>
    <% end %>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
      Error in registration:
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
    <%= yield %>
  </body>
</html>
