
<html>
  <head>
    <title>CHITTER</title>
  </head>

  <body>
    <h1> Chitter! </h1>
      <% if current_user %>
        Signed in as <%= current_user.username %>
      <% end %>

      <% if flash[:errors] && !flash[:errors].empty? %>
        Please refer to the following errors below:
        <ul id='errors'>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

    <%= yield %>

  </body>
</html>
