<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>

    <link rel="stylesheet" href="stylesheets/basic_style.css">

  </head>

  <body>
    <%if session[:user_id] %>

      <%@user= User.first(id: session[:user_id])%>
      <div id='user'><%=@user.email%></div>
    <%end%>


    <% if flash[:errors] %>
      <div id='notice'><%= flash[:errors] %></div>
    <% end %>
    <%= yield %>

  </body>
</html>
