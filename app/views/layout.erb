<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>

  <body>
    <% if current_user %>
    <form method='post' action='/sessions'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Sign Out'>
    </form>
    <form action='/posts/new'>
      <input type='submit' value='New Peep'>
    </form>
    <% end %>
    <h2>Chitter</h2>
    <%= partial :welcome %>
    <%= partial :flash %>
    <%= yield %>
  </body>
</html>
