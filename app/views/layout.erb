<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/layout.css">
    <link rel="stylesheet" href="/stylesheets/peeps.css">
    <link rel="stylesheet" href="/stylesheets/forms.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat+Alternates|Roboto" rel="stylesheet">
    <title>Chitter</title>
  </head>
  <body>
  <header>
    <% if current_user %>
      <div id="welcome">
        <p>Welcome, <%=  @current_user.name %></p>
      </div>
      <div id="new_peep">
        <form>
          <button type="submit" formaction="/peeps/new">New Peep</button>
        </form>
      </div>
    <% else %>
      <div id="welcome"></div>
      <div id="new_peep"></div>
    <% end %>
    <div id="sessions">
      <nav>
        <% if !current_user && request.path_info != '/sessions/new' && request.path_info != '/users/new' %>
          <ul>
            <li>
              <%= erb :'sessions/new' %>
            </li>
            <li>
              <form>
                <button type="submit" formaction="/users/new" class="session_fields">Sign up</button>
              </form>
            </li>
          </ul>    
        <% elsif current_user %>
          <form action="/sessions" method="post">
            <ul>
              <li>
                <input type='hidden' name='_method' value='delete'>
              </li>
              <li>
                <button type="submit" class="session_fields">Log out</button>
              </li>
            </ul>
          </form>
        <% end %>
        </nav>
        </div>
    </header>
<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>
<% if flash[:errors] %>
<%= flash[:errors] %>
<% end %>
<%= yield %>

  </body>
</html>