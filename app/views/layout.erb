<!DOCTYPE html>
<html>
  <head>
    <title> Chitter </title>
  </head>

  <body>
    <p>
    <% if current_user %>
      You're logged in as <%= current_user.username %><br>
        <form method='post' action='/sessions'>
          <input type='hidden' name='_method' value='delete'>
          <input type='submit' value='Log out'>
        </form>
    <% end %>
    </p>
    <p>
    <%= yield %>
    </p>
    <p>
    <% if flash[:notice] %>
      <div id='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>
    </p>
    <p>
    <% if flash[:errors] && !flash[:errors].empty? %>
        <ul id='errors'>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
    <% end %>
    </p>
    <p>

  </body>
</html>