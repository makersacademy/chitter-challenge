
<!DOCTYPE html>
<html>
<head>
  <title>Bookmark Manager</title>
</head>

<body>
  <% if flash[:notice] %>
    <div id='notice'>
    <%= flash[:notice] %>
    </div>
  <% end %>


  <% if current_user %>
    Welcome, <%= current_user.email %>
    <form method='post' action='/sessions'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Sign out'>
    </form>
  <% end %>

  <%= yield %>

</body>

</html>
