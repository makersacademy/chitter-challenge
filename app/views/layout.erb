            <li role="presentation"><a href="/peeps/view-all"><span class="glyphicon glyphicon-th-list" aria-label="View"></span> Peeps</a></li>
            <% if @user %>
              <% if @user.id %>
              <li role="presentation"><a href="/peeps/new"><span class="glyphicon glyphicon-edit" aria-label="Post"></span> Post</a></li>
              <% end %>
            <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        <% if @user %>
        <% if @user.id %>
          <li role=presentation><a href="#">Welcome @<%= @user.username %></a></li>
          <li role="presentation"><a href="/sessions/end"><span class="glyphicon glyphicon-log-out"aria-label="Log out"></span> Log out</a></li>
        <% end %>
        <% else %>
          <li role="presentation"><a href="/users/new"><span class="glyphicon glyphicon-heart-empty" aria-label="Register"></span> Register</a></li>
          <li role="presentation"><a href="/sessions/new"><span class="glyphicon glyphicon-log-in"aria-label="Log in"></span> Log in</a></li>
          </ul>
        <% end %>
