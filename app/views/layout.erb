<!DOCTYPE html>
<html>
  <head>
    <title>CHITTAH</title>
  </head>

  <body>
    <% if current_maker%>
         Oh hey <%= @maker.name %>!
      <p>
        <form action='/session' method='post'>
        <input type=hidden name='_method' value='delete'>
        <button>Log Out</button>
      </p>
    </form>
    <% else %>
      Hey guest!
    <% end %>

    <% if flash[:message] %>
      <%= flash[:message] %>
    <% end %>

    <% if flash[:error] %>
    <ul>
      <% flash[:error].each do |error| %>
       <li><%= error %></li>
      <% end %>
    </ul>
    <% end %>

    <%= yield %>
  </body>
</html>
