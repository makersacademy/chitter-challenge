<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <% if current_user %>
      Welcome, <%= current_user.email %>
    <form method='post' action='/sessions'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Log out'>
    </form>
    <% end %>


    <%if flash[:error] %>
      <div id='error'>
        <%= flash[:error] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
