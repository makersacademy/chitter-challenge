<!DOCTYPE html>
<html>

  <head>
  	<title>Welcome to Chitter</title>
  </head>

  <body>
  	<% if current_user %>
  	  Welcome to Chitter, <%= current_user.user_name %>
  	<% end %>

  	<% if flash[:errors] && !flash[:errors].empty? %>
  	  <ul id = 'errors'>
  	    <% flash[:errors].each do |error| %>
  	      <li><%= error %></li>
  	    <% end %>
  	  </ul>
  	<% end %>
  	<%= yield %>
  </body>

</html>
