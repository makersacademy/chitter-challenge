<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>

    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>

    <!-- Styles -->
    <link href='/css/main.css' rel='stylesheet'>
    <link href='/css/bootstrap.css' rel='stylesheet'>
    <link href='/css/bootstrap-responsive.css' rel='stylesheet'>

  </head>
  <body>

<!-- If there is a logged in user, show the Cheep box for them to Cheep -->
    <% if current_user %>
    <div align='center' class='container'>
      <h3>Welcome to <a href='/'>Chitter</a>, @<%= current_user.username %></h3>
      <form action='/post' method='post'>
        <textarea name='post' placeholder="What's happening?"
                  maxlength='140' cols='50' rows='3'
                  required='required'></textarea></br>
        <button type='submit' class="btn btn-default">Submit</button>
      </form>
    </div>
    <% end %>

    <%= yield %>

<!-- If there is a logged in user, show the logout link at the bottom of the page -->
    <% if current_user %>
    <footer>
      <div align='center' style='padding-top: 50px;' class='container'>
        <form action='/logout' method='post'>
        <button type='submit' class="btn btn-link">Logout</button>
      </div>
      </form>
    </footer>
    <% end %>

  </body>
</html>
