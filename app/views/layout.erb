<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>

  <body>
    <% if current_user %>
      <p>Welcome, <%= current_user.username%>!</p>
    <% end %>

    <%if flash[:error]%>
      <div id='error'><%= flash[:error] %></div>
    <%end%>

    <% if flash[:notice]%>
      <div id='notice'><%= flash[:notice] %></div>
    <%end%>

    <%=yield%>

    <% if current_user %>
      <form action="/sessions" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Log out">
      </form>
    <% end %>

  </body>
</html>
