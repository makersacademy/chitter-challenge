<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>

  <body>

    <% if flash[:errors] && !flash[:errors].empty?%>
      <ul id='errors' style="color:red" >
        <% flash[:errors].each do |error| %>
        <li><%=error%></li>
      <%end%>
      </ul>
    <% elsif current_user %>
      Welcome, <%= current_user.username %>
    <% end %>

    <%= yield %>
  </body>
</html>
