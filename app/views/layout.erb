<!DOCTYPE html>
<html>
  <head>
    <title> Chitter </title>
  </head>

  <body>
    <% if flash[:errors] %>
      <div id='errors'>
        <%= flash[:errors] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div id='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if current_user %>
      Welcome <%= current_user.email %>!
      <form action='/logout' method='post'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Logout'>
      </form>

      <!-- Can only peep if you're logged in -->
      <form action="/peeps/new">
        <input type="submit" value="Peep!">
      </form>
    <% end %>

    <%= yield %>
  </body>
</html>
