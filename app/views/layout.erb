<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Chitter</title>
  </head>
  <body>
    <% if current_user %>
      <h2>Signed in as <%= current_user.username %></h2>
      <form class="" action="/sessions" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Sign Out">
      </form>
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
    <div class="" id="error">
      <%= flash[:errors] %>
    </div>
    <% end %>

    <%= yield %>
  </body>
</html>
