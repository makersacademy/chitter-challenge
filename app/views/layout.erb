<!doctype html>
<html>
  <head>
    <title>Chitter</title>
      <!-- Latest compiled and minified CSS -->
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

      <!-- Optional theme -->
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

      <!-- Latest compiled and minified JavaScript -->
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  </head>
  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/posts">Chitter</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/posts">Posts</a></li>
          <li><a href="/posts/new">New Post</a></li>
          <% if !get_current_user %>
          <li><a href="/login">Login</a></li>
          <li><a href="/users/new">Register</a></li>
          <% end %>
        </ul>
        <% if get_current_user %>
          <form class="navbar-form pull-right" action="/logout" method="post"><input class="btn" type="submit" value="Logout"></form>
          <p class="navbar-text navbar-right" style="margin-right: 5px;">Signed in as <%= @current_user.username %></p>
        <% end %>
      </div>
    </nav>

  <div class="container">
    <div class="jumbotron">
      <h1>Chitter</h1>
      <p>Like Twitter but not</p>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <div class="well">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
