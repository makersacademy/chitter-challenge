<!DOCTYPE html>
<html>
  <head>
    <title>Chitter!</title>
  </head>
  <body>

    <% if current_user %>
    <h1>Welcome <%=current_user.name%></h1>
    <div id='sign_out'>
      <form method='post' action='/sessions'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Sign out'>
      </form>
    </div>
    <% end %>

    <% if flash[:errors] %>
    <div id='errors'>
      <% flash[:errors].each do |error| %>
      <%= error %>
      <% end %>
    </div>
    <% end %>

    <% if flash[:notice] %>
      <div id='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:login] %>
    <div id='login'>
      <%= flash[:login] %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
