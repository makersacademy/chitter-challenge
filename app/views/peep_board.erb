<h1> Peep Board </h1>

<div id="buttons">
<div id="button1">
<form action="/new_peep" method="get">
  <input type="submit" value="Add Peep" >
</form>
</div>
<div id="button2">
<form action="/change_order" method="get">
  <input type="submit" value="Oldest First" >
</form>
</div>
<div id="button3">
<form action="/" method="get">
  <input type="submit" value="Newest First" >
</form>
</div>
<div id="button4">
<form action="/sign_up" method="get">
  <input type="submit" value="Sign Up" >
</form>
</div>
<div id="button5">
<form action="/log_in" method="get">
  <input type="submit" value="Log In" >
</form>
</div>
</div>

<ul id="peeps">
  <% @peeps.each do |peep| %>
  <div id="peep">
  <li>
  User name: <%= peep.user_name %>
  </li>
  <li>
  Message: <%= peep.peep %>
  </li>
  <li id="time">
  Time: <%= peep.created_at %>
  </li>
</div>
  <% end %>
  </ul>
