
<h1> Peeps </h1>


<ul id="peeps">
  <% @peeps.each do |peep| %>
    <li><div class="panel panel-default">
      <div class="panel-body">
      <%=peep.user.username %> peeps: <%= peep.message %> <%= (peep.created_at).strftime('%d/%m/%Y %H:%M:%S')%>
      </div>
    </div>
      <% unless peep.replys.empty? %>
      <% peep.replys.each do |reply| %>
        <ul>
          <li>
          <%= reply.user.username %> <%= reply.message %>
          </li>
        </ul>
        <% end %>
      <% end %>
      <a href="/peeps/<%= peep.id %>/reply">Reply</a>
    </li>
  <% end %>
</ul>
