<% if flash[:errors] && !flash[:errors].empty? %>
  <div class="alert alert-danger">
    <ul id='errors'>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if flash[:message] %>
  <div class="alert alert-info">
    <%= flash[:message] %>
  </div>
<% end %>
