<header>
  <a id="logo" href="/peeps">chitter!</a>
  <a class="button" href="/peeps/new">New Peep</a>

  <div id="user-links">
    <% if current_user %>
      <div id='welcome'>
        logged in as <%=current_user.username%>
      </div>
      <form method='post' action='/sessions'>
        <input type='hidden' name='_method' value='delete'>
        <button type="submit">Sign out</button>
      </form>
    <% else %>
      <a class="button" href="/users/new">Sign up</a>
      <a class="button" href="/sessions/new">Sign in</a>
    <% end %>
  </div>
</header>
