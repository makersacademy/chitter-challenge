<h1>Login</h1>
<form action='/sessions' method='post'>
  <label for='username'>
    Username: <input name='username' type='username'>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <input type='submit' value='Login'>

  <% if flash[:login_error] && !flash[:login_error].empty? %>
    <ul id='login_error'>
      <% flash[:login_error].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

</form>
