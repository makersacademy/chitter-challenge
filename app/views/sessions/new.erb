<div class="post-Signing">
  <h2 class="title-post">Please Sign in</h2>
  <div class="post-form" style="text-align:center">
    <form method="post" action="/sessions" class="login" accept-charset="UTF-8">
      <div class="form">
        <label> Email: </label>
        <input style="margin-bottom: 15px;" type="email" id="email" name="email" placeholder="Email address" required>
      </div>
      <div class="form">
        <label> Password: </label>
        <input style="margin-bottom: 15px;" type="password" id="password" name="password" placeholder="Password" required>
      </div>
      <button type="submit" class="btn btn-primary" id = "signin">Sign in</button>
    </form>
  </div>
</div>
