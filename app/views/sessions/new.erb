<h1>Please sign in</h1>
<% if flash[:notice] %>
  <div id='notice'><%= flash[:notice] %></div>
<% end %>

<form action='/sessions' method='post'>
  <label for='user_name'>
    User name: <input type='text' name='user_name'>
  </label>
  <label for='password'>
    Password: <input type='password' name='password'>
  </label>
  <input type='submit' value='Sign in'>
</form>
