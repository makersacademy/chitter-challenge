<section <%= "id='form_wrapper'" if request.path_info == '/sessions/new' %>>
  <form action='/sessions/new' method="post" <%= "id='form'" if request.path_info == '/sessions/new' %>>
    <ul>
      <li>
        <input type="email" name="email" placeholder="Email" required>
      </li>
      <li>
        <input type="password" name="password" placeholder="Password" required>
      </li>
      <li>
        <button type="submit">Log in</button>
      </li>
    </ul>
  </form>
</section>