<html class='page'>
  <head>
    <link rel="stylesheet" href="<%= url('/style.css') %>" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhaina" rel="stylesheet">
  </head>
  <body>
    <h1> Welcome <%=@user.name%> </h1>
    <a href='/log_in' class='button'>Log out</a>
    <%if @user.username != 'Guest'%>
      <a href='/peep/new' class='button'>New Peep</a>
    <%end%>
    <h1>Peeps</h1>
    <%@peeps.reverse.each do |peep|%>
      <%=peep.username%>:
      <%=peep.content%><br/>
      <%=peep.time.strftime("%H:%M %d/%m/%Y")%><br/>
    <%end%>
  </body>
</html
