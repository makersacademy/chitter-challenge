
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 text-center">
      <form action="/signup/new">
        <input class="menu-button" type="submit" value="Sign Up">
      </form>
    </div>

    <div class="col-sm-4 text-center">
      <form action="/sessions/new">
        <input class="menu-button" type="submit" value="Sign In">
      </form>
    </div>

    <div class="col-sm-4 text-center">
      <% if current_user %>
      <form  action="/posts/new">
        <input class="menu-button" type="submit" value="New Peep!">
      </form>
      <% end %>
    </div>
  </div>

  <% @posts.each do |post| %>
    <div class="container-fluid peep">
      <h3 class="peep-heading"><%=post.title%></h3>
      <h4>Posted by <a id="<%= post.user.username %>" href="/<%= post.user.username %>"><%= post.user.username %></h4></a>
      <p><%=post.body%></p>
      <p><%=post.inception.strftime("Posted at %H:%M:%S on %d-%m-%Y")%></p>
    </div>
  <% end %>

</div>
