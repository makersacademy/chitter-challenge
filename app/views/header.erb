<header>
  <div id="logo"> 
    <a href="/">Chitter</a>
  </div>
   <% if current_user %>
      <a href="/peeps/new" class="button highlighted">Create a new peep...</a>
   <% end %>

  <div id="user-peeps">
    <% if current_user %>
      <span id="welcome-message">
        Happy peeping <%= current_user.first_name %>!  
      </span>
      <form id="sign-out" method="post" action="/sessions">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Sign out" class="button">
      </form>
    <% else %>
      <span id="welcome-message">
        Please sign in or register to start peeping  
      </span>
      <a href='/users/new' id='sign-up' class='button'>Sign up</a>
      <a href='/sessions/new' id='sign-in' class='button'>Sign in</a>      
    <% end %>
  </div>
</header>