<header style=" padding-right: 0px; padding-left: 0px; margin-left: 40px; margin-right: 40px; border-radius: 4px;">

  <div id="logo">
    <a href="/">Chitter</a>
  </div>

  <div id="peeps-frontpage">
    <% if current_user %>
      <span id="welcome-message">
        Welcome, <%= current_user.email %>
      </span>
      <form style="float: right;" id="sign-out" method="post" action="/sessions">
        <input type="hidden" name="_method" value="delete">
        <input class="button" type="submit" value="Sign out">
      </form>
    <% else %>
      <a href="/users/new" id="sign-up" class="button">Sign up</a>
      <a href="/sessions/new" id="sign-in" class="button">Sign in</a>
    <% end %>
  </div>

</header>
