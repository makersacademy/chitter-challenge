<header>
  <div id="logo">
      <a href="/">Chitter</a>
  </div>
  <div id="user-links">
    <% if current_user %>
      <span id="welcome-message">
        Welcome, <%= @current_user.username %>
      </span>

      <form id="sign-up" method="post" action="/sessions">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Sign out">
      </form>
      <% else %>
      <a href="/users/new" class="button highlighted">Join</a>
      <a href='/sessions/new' id='sign-in' class='button'>Sign in</a>

    <% end %>

  </div>
</header>