<header>
  <div id="logo" alt="Insert logo here">
  Welcome to Chitter</div>
  <div id='user-links'>
      <% if current_user %>
      <span id='welcome-message'>
    Welcome, <%= current_user.name %>
    </span>

    <form id='sign-out' method="post" action="/sessions">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Sign out">
    </form>
    <% else %>
      <a href='/users/new' id='sign-up' class='button'>Sign up</a>
      <a href='/sessions/new' id='sign-in' class='button'>Sign in</a>
      <a href='/peeps/new' id='new-peep' class='button'>New Peep</a>
    <% end %>

  </div>
</header>