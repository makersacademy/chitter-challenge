<div style="position: absolute; right: 5px; padding: 5px">
  <% unless current_user %>
    <form action='/'>
      <input type="submit" value="Sign in" style="text-align: center; font-size: 100%; color: white; border-radius: 4px; text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2); background: #99ccff; width: 8em;  height: 2em;">
    </form>
  <% end %>
</div>

<div style="position: absolute; left: 32%; margin-right; -50%; min-height: 100px; width:500px">
  <ul id="peeps" style="list-style-type: none">
    <% if @peeps %>
      <% @peeps.reverse.each do |peep| %>
        <div style="text-align: center; display: inline-block; width: 415px; height: 170px; background-image: url('/images/rsz_chitter-box-texturized-2.png'); background-repeat: no-repeat; word-wrap: break-word">
          <li>
            <div style="margin-top: 10px; margin-left: 10px; font-size: 90%; text-align: left; font-weight: bold">
              <%= peep.name %> 
                <div style="font-size: 80%; color: grey; display: inline-block; font-weight: normal"> 
                  @<%= peep.username %> 
                </div> 
                <div style="font-size: 80%; color: black; display: inline-block; font-weight: normal; float: right; margin-right: 12px; font-weight: bold"> 
                  <%= relative_time(peep.created_at) %>
                </div> 
            </div>
            <div style="height: 110px; width: 390px; display: flex; justify-content: center; align-items: center; padding: 5px; padding-left: 10px; font-size: 110%; text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2)">
              <%= peep.message %>
            </div>
          </li>
        </div>
      <% end %>
    <% end %>
  </ul>
</div>
