</head>
<body class="body">
  <div class="navbar w-nav" data-animation="default" data-collapse="medium" data-duration="400">
    <div class="w-container">
      <a class="brand w-nav-brand" href="/">
        <div class="h1">chitter</div>
      </a>
      <nav class="w-nav-menu" role="navigation">

        <!-- CODE MENU ITEMS-->
        <% if current_user %>
          <div class="w-nav-link welcomemessage"> <%= @welcome_message %> </div>
          <a class="link w-nav-link" href="/user/logout">Logout</a></nav>
        <% end %>
        <!-- END OF CODE -->


        <!-- CODE -->
        <% if !current_user %>
          <a class="link w-nav-link" href="/user/login">Sign In</a>
          <a class="link w-nav-link" href="/user/new">Sign Up</a></nav>
        <% end %>
        <!-- END OF CODE -->

      <div class="w-nav-button">
        <div class="w-icon-nav-menu"></div>
      </div>
    </div>
  </div>
  <div>
    <div class="content-container w-container">


      <!-- CODE SERVICE MESSAGE -->

      <% if !current_user %>
      <div class="inversediv">
        <p class="caption service">Please sign in or sign up to post something</p>
      </div>
      <% end %>

      <!-- END OF CODE -->

          <!-- CODE -->
          <% if current_user %>
          <div class="inversediv">
              <form id="email-form" name="create_message" action="/feed" method="post">
                <label class="field-label">What&#39;s on your mind?
                <textarea id="field" class="area textfield w-input" maxlength="5000" name="message">
                </textarea>
              </label>
                <input class="blue button w-button" type="submit" value="Send">
              </form>
          </div>
          <% end %>
          <!-- END OF CODE -->

      <ul class="w-list-unstyled" id="peeps">

        <!-- CODE -->
        <% @peeps.each_with_index do |peep, i| %>
        <% t = peep.time_created %>
        <li class="list-item">
          <div class="chitdiv">
            <div class="flexlayout">
              <p class="caption"><%= peep.user.email %></p>
              <p class="caption timestamp"><%= t.strftime("%Y") %> <%= t.strftime("%b") %> <%= t.strftime("%d")%> at <%= t.strftime("%H:%M") %></p>
            </div>
            <p class="bodycopy"><%= peep.message %></p>
          </div>
        </li>
        <% end %>
        <!-- END OF CODE -->

      </ul>
    </div>
  </div>
  <div class="footersection">
    <div class="w-container">
      <div class="chitdiv">
        <div class="caption legal">To the maximum extent allowed by law Chitter, its representatives, employees and directors are not liable for any direct or indirect damages that result from use or inability to use of its services. By using Chitter you are personally responsible for compliance with all the international and local laws.</div>
      </div>
    </div>
  </div>
