<% if flash[:notice] %>
  <div id='notice'>
    <p><%= flash[:notice].first %></p>
  </div>
<% end %>

<% if flash[:message] %>
  <div id='message'>
    <%= flash[:message] %>
  </div>
<% end %>

<% if flash[:errors] && !flash[:errors].empty? %>
  Please refer to the following errors below:
  <ul id='errors'>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
