<% if current_user %>
  <p>Welcome, <%= current_user.name %></p>
  <form action='/sessions' method="post">
    <div class="form-group">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" class="btn btn-default" id="sign_out" value="Sign Out">
    </div>
  </form>
<% else %>
<div class="button-group">
  <form action='/sessions/new' method="get">
    <div class="form-group">
      <input type="submit" class="btn btn-default" id="sign_in" value="Sign In">
    </div>
  </form>
  <form action='/users/new' method="get">
    <div class="form-group">
      <input type="submit" class="btn btn-default" id="new_user" value="Create Account">
    </div>
  </form>
</div>
<% end %>
