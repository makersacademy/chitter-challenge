source 'https://rubygems.org'
ruby '2.2.3'

gem 'sinatra' # Sinatra is a DSL for quickly creating web applications in Ruby with minimal effort
gem 'sinatra-flash' # A Sinatra extension for setting and showing Rails-like flash messages
gem 'bcrypt' # provides a simple wrapper for safely handling passwords.
gem 'data_mapper' # ORM written in Ruby
gem 'dm-postgres-adapter' # PostgreSQL Adapter for DataMapper

group :test do
  gem 'rspec' # testing tool for Ruby, created for behavior-driven development (BDD)
  gem 'cucumber' # Cucumber is a tool for running automated tests written in plain language
  gem 'rake' # Rake is a Make-like program implemented in Ruby. Tasks and dependencies are specified in standard Ruby syntax
  gem 'coveralls', require: false # A Ruby implementation of the Coveralls API
  gem 'rubocop-rspec' # Code style checking for RSpec files. A plugin for the RuboCop code style enforcing & linting tool.
  gem 'rubocop' # Ruby static code analyzer..can also automatically fix some of the problems for you
  gem 'rspec-sinatra' # initialize a rspec environment for a sinatra application. It will generate the required files from templates.
  gem 'capybara' # integration testing tool for rack based web applications. It simulates how a user would interact with a website
  gem 'database_cleaner' # set of strategies for cleaning your database in Ruby
  gem 'factory_girl' #  provides a framework and DSL for defining and using factories
  # SimpleCov is a code coverage analysis tool for Ruby works with cucumber , coverlls etc
end
