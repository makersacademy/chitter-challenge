<% if flash[:errors] && !flash[:errors].empty? %>
  <div>
    Oops!
    <ul id='errors'>
      <% flash[:errors].each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if flash[:sign_out] %>
  <div id='sign_out_message'>
    <%= flash[:sign_out] %>
  </div>
<% end %>
