<% if current_user %>
	<div id='new-peep'>
  		<form action='/peeps' method='post'>
    		<input type='text' class="peeper" size="40" style="font-size: 16px" maxlength="140" name='message'>
   			<input type='submit' class="subpeep" value='Peep'>
  		</form>
	</div>
<% end %>
<section class="signupbox">
	<main>
		<ul>
			<% @peeps.each do |peep| %>
				<div class="peep">
    				<li class="name"><%= peep.name %></li> <li class="username">@<%= peep.username %></li> <li class="time"><%= peep.time.strftime("%I:%M%p") %></li>
    				<article><%= peep.message %></article>
    			</div>
  			<% end %>
		</ul>
	</main>
</section>