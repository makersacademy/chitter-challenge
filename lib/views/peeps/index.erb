<% elsif @author %>

  <h3> <%= @author.name %>'s peeps: </h3>

  <ul id='peeps'>
    <% @peeps.each do |peep| %>
      <li>
        <%= @author.name %> |
        @<%= @author.username %> |
        <%= (peep.peep_time).strftime('%l:%m %p - %e %b %Y') %>
        <br>
        <%= peep.content %>
      </li>
      <br>
    <% end %>
  </ul>

<% else %>

