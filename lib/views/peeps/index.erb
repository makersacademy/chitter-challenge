<% if current_user %>

  <form action='/peeps/new' method="get">
    <button type="submit">You peep!</button>
  </form>

  <br>

  <h3> Chitter flow </h3>


  <ul id='peeps'>
    <% @peeps.each do |peep| %>
      <li>
        <%= User.get(peep.user_id).name %> |
        @<%= User.get(peep.user_id).username %> |
        <%= (peep.peep_time).strftime('%l:%m %p - %e %b %Y') %>
        <br>
        <%= peep.content %>
      </li>
      <br>
    <% end %>
  </ul>

