<% if current_user %>
  <article id='salutation'>
    Hi, <%= current_user.name %>!
  </article>
  <br>
  <article id='sign_out_button'>
    <form action='/sessions' method='post'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Sign out'>
    </form>
  </article>
<% end %>
