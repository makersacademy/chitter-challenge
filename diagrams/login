alias client="User"
alias controller="Controller"
alias model="Login class"
alias data="User database"
alias view="view"

client->controller: "post '/login'"
controller->model: "Login.attempt\n(username/email, password)" 
model->data: "SELECT password FROM users\n WHERE username/email = entered_id"
model->model: "checks stored password\nmatches given password"
model-->controller: "returns user hash or fail"
controller->controller: "if successfull:\nsaves user hash\nto sessions"
controller->view: "requests home.erb or login.erb"
view-->controller: "returns appropriate page"
controller-->client: "sends page to client"