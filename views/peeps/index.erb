<h1>Peeps</h1>
<% if !@user.nil? %>
  <p>
    <%= @user.name %>'s Chitter
  </p>
<% end %>
<p>
  <a href='/peeps/new'>New Peep</a>
</p>
<p>
  <ul>
    <% @peeps.each do |peep| %>
      <li class='peep'>
        <%= peep.message %>
        <%= peep.created_at.strftime("%k:%M %d/%m/%Y") %>
      </li>
    <% end %>
  </ul>
</p>
