<h1> Peeps </h1>

<ul id="menu">
  <li><a href="/peeps/new">Add new peep</a></li>
</ul>

<ul id='peeps'>
  <% @peeps.reverse.each do |peep| %>
    <li>
      Message: <%= peep.message %>
      <br>
      Real Name and Username: <%= peep.user.real_name %> / <%= peep.user.user_name %>
      <br>
      Time-Stamp: <%= peep.created_at %>
    </li>
    <br>
  <% end %>
</ul>
