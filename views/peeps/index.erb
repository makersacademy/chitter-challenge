<h1>Peeps</h1>

<ul class="peeps">
  <% @peeps.each do |peep| %>
    <li class="peep">
      <p class="peep-message"><%= peep.message %></p>
      <time class="peep-created-at" datetime="<%= peep.created_at %>">
        <% created_at = DateTime.parse(peep.created_at) %>
        <%= created_at.strftime("Posted: %d %b %Y") %>
        <%= created_at.strftime("at %I:%M%p") %>
      </time>
    </li>
  <% end %>
</ul>