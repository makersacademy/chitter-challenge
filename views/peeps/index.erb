<% require 'time' %>

<p> Welcome to Chitter Hagrid!</p> 

<% if @user %>
  <h1>Welcome to Chitter <%= @user.username %></h1>
<% end %>

<h3> Peeps Bonanza </h3>
<ul>
  <% @peeps.reverse_each do |peep| %>
    <p><br><%= peep.text %><br>
      <%= Time.parse(peep.time).strftime("%H:%M, %d %B") %>
    </br></p>
  <% end %>
</ul>


<a href="/peeps/new">New Peep!</a>



