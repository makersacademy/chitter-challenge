<!DOCTYPE>
<html>
<h1> Peeps </h1>

  <ul id="peeps">
    <% @peeps.each do |peep| %>
      <li>
        <div id='singlePeep'>
          <div id='topBanner'>
            User:  <%= peep.user %>
            Time:    <%= peep.time %>
          </div>
          <div id='peep'>
            Peep: <%= peep.content %>
          </div>
          <br></br>
        </div>
      </li>
    <% end %>
  </ul>
