<% if session[:user] %>
  <p>Hello, <%= session[:user].username %></p>
<% end %>
<form action="/peeps/new" method="get">
  <input type="submit" value="Make a Peep">
</form>

<ul>
  <% @peeps.each do |peep| %>
    <li class="peep"><%= peep.text %> <p></p>(<%= DateTime.parse(peep.created_at).strftime("%e/%_m/%Y @ %H:%M:%S") %>)</p></li>
  <% end %>
</ul>