<!doctype html>
<html>
  <head>
    <title>Chitter</title>
    <link rel="stylesheet" type='text/css' href="style.css">
    </style>
  </head>
  <body>
    <div class="chitter">
      <h1>Welcome to Chitter!</h1>
      <form action="/chitter/new" method="get">
        <input type="submit" value="New Peep">
      </form>
        <br>
      <form action="/chitter/newest_first" method="get">
        <input type="submit" value="Newest Peeps">
      </form>
        <br>
      <form action="/chitter/oldest_first" method="get">
        <input type="submit" value="Oldest Peeps">
      </form>
        <br>
      <ul>
        <% @all_peeps.each do |peep| %>
          <li>
            <p>Peep <%= peep.id %>: <%= peep.message %></p>
          </li>
        <% end %>
      </ul>
    </div>
  </body>
</html>
