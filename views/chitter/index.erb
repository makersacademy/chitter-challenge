<h1>Chitter</h1>

<% if @user %>
  <h1>Welcome, <%= @user.email %></h1>
  <% else %>
  <a href="chitter/users/new">Sign up</a>
<% end %>
 <a href="chitter/sessions/new">Log in</a>


<form action ="chitter/new" method="post">
  <input type="text" name="peep" placeholder="What's up?">
  <input type="submit" value="Send">
</form>

<ul>
  <% @peeps.each do |peep| %>
    <li>
    <%= peep.text %>
    created at: <%= peep.created_at %>
    </li>
  <% end %>
</ul>
