<h5><strong>Create your account</strong></h5>
<form action='/users' method='POST'>
  <div class="form-group">
    <label></label> 
    <input id="name" name="name" placeholder="Name" type="text" class="form-control sq-gray">
  </div>
  <div class="form-group">
    <label></label> 
    <input id="handle" name="handle" placeholder="Chitter Handle" type="text" class="form-control sq-gray">
  </div>
  <div class="form-group">
    <label></label> 
    <input id="email" name="email" placeholder="Email" type="text" class="form-control sq-gray">
  </div>
  <div class="form-group">
    <label></label> 
  <input id="password" name="password" placeholder="Password" type="password" class="form-control sq-gray">
  </div> 
  <div class="form-group">
    <button name="submit" type="submit" class="btn btn-primary ls-btn"><strong>Sign Up</strong></button>
  </div>
</form>