<h1>Sign Up For Chitter!</h1>
<form action='/users' method='post'>
  <label for='name'>
    Name: <input name='name' type='text' value='<%= @user.name %>'>
  </label>
  <label for='email'>
    Email: <input name='email' type='text' value='<%= @user.email %>'>
  </label>
  <label for='user_name'>
    UserName: <input name='user_name' type='text' value='<%= @user.user_name %>'>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <label for='password_confirmation'>
    Confirm Your Password: <input name='password_confirmation' type='password'>
  </label>
  <input type='submit' value='Sign Up'>
</form>
