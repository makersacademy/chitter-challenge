<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/style.css">
    <title>Chitter App</title>
  </head>
  <body>
    <ul>
    <% @peeps.each_with_index do |peep, i| %>
      <li>
      <div>
        <%= @makers[i].name %> - <%= @makers[i].username %> Peeped: 
        <p>
        <%= peep.content %>
        </p>
        At: <%= peep.created_datetime %>
      </div>
      <br>
      </li>
    <% end %>
    </ul>
    <% if logged_in? %>
    <form method="POST" action="/peeps">
    <div>
      <label>New reply: </label>
      <input type="text" name="content" />
      <input type="submit" value="PEEP"/>
    </div>
    <input type="hidden" id="conv_id" name="conv_id" value=<%=@peeps.last.conversation_id%>>
    </form>
    <% end %>
  </body>
</html>