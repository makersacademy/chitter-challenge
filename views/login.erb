<html>
  
  <head>
    <title>Chitter</title>
    <link href="<%= url('/styles.css') %>" rel="stylesheet" type="text/css" />
  </head>

  <body>

    <form action="/login" method="post">

      <div class='bold-line'></div>
        <div class='container'>
          <div class='window'>
            <div class='overlay2'></div>
            <div class='content'>
              <div class='welcome'>Chitter</div>
              <br />
              <div class='subtitle'>To send peeps<br>you need to login</div>
              <div class='input-fields'>
                <input name="user_name" type='text' placeholder='User name' class='input-line full-width' required/>
                <input name="password" type='password' placeholder='Password' class='input-line full-width' required/>
              </div>
              
              <div class='spacing2'><a class='highlight' href="/signup">Sign up</a></div>

              <div><button class='ghost-round full-width'>Please login</button></div>
          </div>
          
          <% if session[:error_message] %>
            <div class="error"> <%= session[:error_message] %> </div>
          <% end %>

        </div>
      </div>

    </form>

    <div id="footer" class="contacts">
      <a class="icons" href="https://www.linkedin.com/in/yaroslava-yates-629517221/" target="_blank">
          <img class="icons" src="https://i.postimg.cc/CKhnxt4D/link.png" alt="Linkedin">
      </a>
    </div>

  </body>
  
</html>