<form action="/cheeps/reverse">
  <input type="submit" value="Oldest first" />
</form>
<form action="/cheeps/new">
  <input type="submit" value="Cheep" />
</form>
<ul>
  <% @cheeps.each do |cheep| %>
  <table>
    <tbody>
      <tr>
        <td><%= cheep.cheep %></td>
      </tr>
    </tbody>
    <tfoot>
      <tr>
        <td><%= cheep.time %></td>
      </tr>
    </tfoot>
  </table>
  <% end %>
</ul>
