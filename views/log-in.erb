<head>
  <link rel="stylesheet" href="/styles.css">
</head>

<body style="background-color: #1b053a">
  <h1>- Chitter -</h1>
  <h2>Sign in</h2>
  <h5>
    <% if flash[:error] %>
      <%= flash[:error][0] %>
    <% end %>
  </h5>
  <form class="add_form" action="/log-in" method="post">
    <div>
      <input type="email" name="email" placeholder="Email" value="<%if @user%><%=@user.email%><%end%>">
    </div>
    <div>
      <input type="password" name="password" placeholder="Password">
    </div>   
    </br>
    <div>
      <input type="submit" value="Log in">
    </div>
  </form>
</body>