<h1> Chitter </h1>
<h1> </h1>

  <p> <%= @user.name %>   @<%= @user.username %> </p>
  <form action="/peep" method="post">
    What's on your mind? <input type="text" name="peep">
    <input type="submit" value="Peep" name="Peep">
  </form>

  <ul>
    <% @peeps.reverse.each do |peep| %>
      <li class="peep" id="peep-<%= peep.id %>">
        <p> <%= @user.name %>   @<%= @user.username %>: </p>
        <p> <%= peep.peep %> </p>
        <p> <%= peep.time %> </p>
    <% end %>
  </ul>
