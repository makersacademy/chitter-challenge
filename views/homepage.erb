  <body>
    <h1>Chitter</h1>
    <% @cheeps.zip(@corresponding_users).each do |cheep, user| %>
    <article class="cheep">
      <p>
        <%= user.username %> <br>
        <%= cheep.content %> <br>
        Posted at: <%= cheep.created_at %>
      </p>
    </article>
    <% end %>
  </body>
</html>