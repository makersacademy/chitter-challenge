<head>
  <h1>Chitter. Where reasonable people politely discuss their views.</h1>
</head>
<h2>Logged in as: <%= @logged_in_as %> </h2>
<h3>**** <%= @message %> **** </h3>
<h3>Register</h3>
<form action="/register" method="post">
  <input type="text" name="register_username" value="Username">
  <input type="text" name="register_password" value="Password">
  <input type="submit" value="Register">
</form>
<h3>Sign In:</h3>
<form action="/login" method="post">
  <input type="text" name="login_username" value='Username'>
  <input type="text" name="login_password" value='Password'>
  <input type="submit" value="Login">
</form>
<h3>Sign-Out</h3>
<form action="/logout" method="post">
  <<input type="submit" value="Logout">
</form>
<h3>Peep:</h3>
<form action="/peep" method="post">
  <input type="text" name="peep" value="Enter Peep Here">
  <input type="submit" value="post_peep">
</form>
<h2>Peeps Feed:</h2>

<ul>
<% @peeps.reverse.map do |entry| %>
  <li>
    <h3><%=p entry.username %>: <%=p entry.time%> : <%=p entry.date%> <br></h3>
    <p><%=p entry.peep%></p>
    <% end %>
  </li>
  <br>
</ul>
