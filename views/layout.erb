          <div class="site-wrapper">
            <div class="site-wrapper-inner">
              <div class="cover-container">
                
                <div class="inner cover">
                  
                  <!-- flash errors -->
                  <% if flash[:errors] %>
                  <div id='errors'>
                    <% flash[:errors].each do |error| %>
                    <p class="bg-warning"><%= error %></p>
                    <% end %>
                  </div>
                  <% end %>
                  <!-- flash notices -->
                  <% if flash[:notice] %>
                  <div>
                    <p class="bg-info">
                      <%= flash[:notice] %>
                    </p>
                  </div>
                  <% end %>
                  <%= yield %>
                  
                </div>
