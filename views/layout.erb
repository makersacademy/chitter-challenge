<DOCTYPE! html>

<html>
  <head>
    <link rel="stylesheet" href="/stylesheet.css"/>
    <title>Chitter</title>
  </head>
  <body>

    <% flash.keys.each do |type| %>
      <div data-alert class="flash <%= type %> alert-box radius">
        <%= flash[type] %>
        <a href="#" class="close">&times;
        </a>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>