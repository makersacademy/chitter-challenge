<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link 
      rel="stylesheet" 
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" 
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" 
      crossorigin="anonymous" 
      referrerpolicy="no-referrer" 
    />
  <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css" />
  </head>
  <body>
  <!-- sidebar starts-->
  <div class="sidebar">
    <i class="fab fa-twitter"></i>
    <a href="/messages">
      <div class="sidebarOption">
        <span class="material-icons"> home </span>
        <h2>Home</h2>
      </div>
    </a>

    <%if session[:user_id] %>
    <a href="/log-out">
      <div class="sidebarOption">
        <span class="material-icons"> logout </span>
        <h2>Log Out</h2>
          <form action="/log-out" method="get">
            <input type="submit" value="Log Out">
          </form>
      </div>
    <a>
    <% end %>

    <%if session[:user_id].nil? && request.path_info != '/' %>
      <a href="/">
        <div class="sidebarOption">
          <span class="material-icons"> login </span>
          <h2>Login</h2>
            <form action="/" method="get">
              <input type="submit" value="Log In">
            </form>
        </div>
      </a>
    <% end %>

    <%if session[:user_id].nil? && request.path_info != '/register' %>
      <a href="/register">
        <div class="sidebarOption">
          <span class="material-icons"> supervisor_account </span>
          <h2>Sign Up</h2>
            
              <form action="/register" method="get">
                <input type="submit" value="Sign Up" class="nav-link">
              </form>
        </div>
      </a>
    <% end %>

    <button class="sidebar__cheet">Cheet</button>

  </div>
  <!--  sidebar ends -->
    <% flash.keys.each do |type| %>
      <div data-alert class="flash <%= type %> alert-box radius">
        <%= flash[type] %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>
  <%= yield %>

  </body>
</html>