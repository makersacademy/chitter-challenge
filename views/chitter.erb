<% if @user %>
  <h1>Welcome, <%= @user.username %></h1>
<% end %>

<h2>Viewing all peeps</h2>
<ul>
  <% @peeps.each do |peep| %>
  <li class="peep"><%= peep.timestamp %> - <%= peep.post %></li>
  <% end %>
</ul>

<form action='/chitter/add'>
  <input type='submit' value='New peep'>
</form>

<form action='/users/new'>
  <input type='submit' value='Sign up to Chitter'>
</form>
