<style>

body {    background-color: #c3c5f3;
    font-family: sans-serif;
    font-size: 14px;
    letter-spacing: 1px;}

li {
    background-color: white;
    padding: 2% 2%;
    list-style: none;
    margin: 1% auto;
    border: 4px solid #a1a3cc;
}

h2 {    font-size: 22px;
    letter-spacing: 2px;
    font-family: sans-serif;}
h2.error_message {font-size: 14px;}
.text {      width: 74%;
    padding: 1% 2%;
    font-size: 12px;
    letter-spacing: 1px;
    border: 1px solid #fff;
    border-radius: 5px;}

    .text-submit {   background-color: #a1a3cc;
    color: #fff;
    font-weight: bold;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-size: 14px;
    font-family: sans-serif;
    width: 20%;
    margin: 2% 0 2% 5%;
    padding: 1% 0;
    border: 1px solid #fff;
    border-radius: 5px;
    cursor: pointer;}
    

    ul {    margin: 0 auto;
    padding: 0;
    width: 50%;}
</style>

<% if @user %>
  <h1>Welcome to Chitter <%= @user.email %></h1>
     <form action="/sessions/destroy" method="post">
    <input type="submit" value="Sign out" />
  </form>
  <% else %>
  <h2>Welcome to Chitter</h2>
<% end %>


 <h2 class="error_message"> <%= flash[:notice] %></h2>
<form style="margin:0 auto; width: 50%;" action="/messages/new" method="post">
  <input class="text" type="text" name="text" placeholder="message">
  <input class="text-submit" type="submit" value="Post">
</form>
<ul>
  <% @messages.each do |message| %>
   <li> 
   <%= message.text %> <span style="font-weight: bold;">created at: </span><%= message.time %>
  </li>
  <% end %>
</ul>

