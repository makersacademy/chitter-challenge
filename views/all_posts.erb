<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <style>
    body {
            color: white;
    }
    .text{
      color: black;
      text-shadow: 5px 5px 10px orange;
       text-align: center;
    }
    </style>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
    <body style="background-color: #476b6b;">
      </br>
    <div class="container" style="background-color: #334d4d; border-radius: 20px;">
      <br/>
      <h1 style="color: white; text-shadow: 5px 5px 10px orange; text-align: center;"">All Peeps</h1>
      <br/>
    </div>
<br/>

    <a  href="/chitter">
    <div class="container" style="background-color: #334d4d; border-radius: 20px;">
      <br/>
      <h1 class="text">CLICK HERE AND CREATE NEW POST!</h1>
      <br/>
    </div>
    </a>


<br/>
    <% @peeps.each do |peeps| %>
    <li id="peeps-<%= peeps.id %>">
    <div class="container" style="background-color: #ffcc66; border-radius: 20px;">
      <br/>
      <h5 class="text"><%= peeps.text %></h5>
      <% if @user %>
      created by : <%= @user.email %>
      <% end %>
      <br/>
    </div>
    <br/>
    <% end %>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
