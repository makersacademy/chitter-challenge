<form action='/peep' method='post'>
  Post a peep sailor: <input type='text' name='content' id='content_input'>
  <input type='submit' value='Submit'>
</form>
<div>
  <% @peeps.each do |peep| %>
    <div class='peep' id='<%= peep.id %>'>
      <span><%= peep.content %></span>
      <span><%= peep.formatted_created_at %></span>
      <% if @user %>
        <span>Posted by<%= @user.username %></span>
      <% end %>
    </div>
  <% end %>
</div>