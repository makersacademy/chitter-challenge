<html>
  <head>
    <a href="/new">New Peep</a>
    <a href="/login">Login</a>
    <a href="/signup">Sign Up</a>
  </head>
  <body>

    <%@peeps.reverse.each do |peep|%>
      <h1><%= @users.find(peep.user_id).name%></h1>
      <div><%= peep.time%></div>
      <div><%= peep.message%></div>
    <%end%>
  </body>
</html>