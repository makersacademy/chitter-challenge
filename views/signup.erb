<html lang="en">

<head>
    <link rel="stylesheet" href="css/index.css">
    <% # bootstrap %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
</head>

<body class="text-center">
    <header>
        <div id="navbarHeader">Â 
            <div class="container">
                <div class="row ">
                    <div class="col-sm-12 col-md-12 py-4 d-flex justify-content-between">
                        <h1><a href="/">Chitter</a><span class="name"><% if @user %><%= @user.name %><% end %><span></h1>
                        <div class="mr">
                            <p><a href="login">Login</a> <a href="/">Home</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <% if flash[:username]  %>
        <div class="alert alert-danger">
            <%= flash[:username] %>
        </div>
    <% end %>
    <main class="form-signin py-4 d-flex justify-content-center">
        <form class="col-6" action="/signup" method="post">
            <h1 class="h3 mb-3 fw-normal">Sign Up</h1>
            <label for="username" class="visually-hidden">Username</label>
            <input type="text" id="username" name="username" class="form-control my-4" placeholder="Username" required autofocus="">
            <label for="first-name" class="visually-hidden">First Name</label>
            <input type="text" id="name" name="name" class="form-control my-4" placeholder="First Name" required>
            <label for="last-name" class="visually-hidden">Last Name</label>
            <input type="text" id="last-name" name="lastname" class="form-control my-4" placeholder="Last Name" required>
            <label for="inputEmail" class="visually-hidden">Email address</label>
            <input type="email" id="inputEmail" name="email" class="form-control my-4" placeholder="Email address" required>
            <label for="inputPassword" class="visually-hidden">Password</label>
            <input type="password" id="inputPassword" name="password" class="form-control my-4" placeholder="Password" required>
            <input class="w-100 btn btn-lg" type="submit" value="Register">
            <br>
            <br>
            <a href="/login">I have an account</a>
        </form>
    </main>

</body>
</html>