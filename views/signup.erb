<!doctype html>

<html lang='en'>
  <head>
     <link rel = "stylesheet" href = "/style.css" />
     <link href="https://fonts.googleapis.com/css?family=Ubuntu:300&display=swap" rel="stylesheet">
  </head>
  <body>
    <div id="navigation">
      <form action="/">
        <input id="peepWall" type="submit" value='peep wall' class='sign-up-submit-btn' />
      </form>
      <form action="/sessions/new">
        <input id="logIn" type="submit" value='log in' class='sign-up-submit-btn' />
      </form>
    </div>
    <br>
    <br>
    <br>
    <h1>chitter sign up</h1>
    <%= flash[:empty_field] %>
    <%= flash[:email_already_exists] %>
    <%= flash[:username_not_unique] %>
    <br>
    <br>
    <form action="/users" method='post'>
      <br>
      <label for="email">email:</label>
      <input type='text' name='email' placeholder="peeper@chitter.com" />
      <br>
      <label for="password">password:</label>
      <input type='password' name='password' placeholder="password123" />
      <br>
      <label for="name">name:</label>
      <input type='text' name='name' placeholder="Chit Peeper" />
      <br>
      <label for="username">username:</label>
      <input type='text' name='username' placeholder="ChitPeep4eva" />
      <br>
      <input type="submit" value='join' class='join-submit-btn' />
    </form>
  </body>
</html>
