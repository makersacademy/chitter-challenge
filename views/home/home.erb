<div class='chitter-content'>
  <div class='row'>
    <div class='col-1'></div>
    <div class='col-2'>
      <header>
        <div class='container'>
          <div class='navbar-header'>
            <div class='container'>
              <a class='navbar-brand' href='/'>Chitter</a>
              <form action='/sessions' method='POST'>
                <input type="hidden" name="_method" value="DELETE">
                <button type='submit'>Log out</button>
              </form>
            </div>
          </div>
        </div>
      </header>
    </div>
    <div class='col-5'>
      <body>
        <div class='continer'>
        <div class='card'>
          <div class='card-body'>
            <h5>
              <strong>
                <%= @page.to_s.split("/")[0].capitalize %>
              </strong>
            </h5>
          </div>
        </div>
        <%= erb :'forms/peep_form' if @user %>
        <%= erb :'home/peeps' %>
      </body>
    </div>
    <div class='col-4'></div>
  </div>
</div>
