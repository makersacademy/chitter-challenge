<div class='chitter-content'>
  <div class='row'>
    <div class='col-1'></div>
    <div class='col-2'>
      <header>
        <div class='container'>
          <div class='navbar-header'>
            <div class='container'>
              <% if @user %>
                <a class='navbar-brand' href='/home'>
                  <img src=<%= @logo %> class='header-icon rounded'>
                  Chitter
                </a>
              <% else %>
                <a class='navbar-brand' href='/login'>
                  <img src=<%= @logo %> class='header-icon rounded'>
                  Chitter
                </a>
              <% end %>
            </div>
          </div>
        </div>
        <% if @user %>
        <div class='sidebar'>
          <div class='card nav shadow rounded'>
            <div class='container'>
              <strong><%= @user.name %></strong>
              <p><%= @user.handle %></p>
            </div>
            <a class='btn btn-link sidebar-btn' href='/users/<%= @user.id %>/tags'>
              Tags <%= "<b class='tag-alert'>!</b>" unless @tags[:unread].length == 0 || @directory == :'users/tags' %>
            </a>
            <div class ='card-footer logout'>
              <form action='/sessions' method='POST'>
                <input type="hidden" name="_method" value="DELETE">
                <button class='btn btn-link sidebar-btn' type='submit'>Log out</button>
              </form>
            </div>
          </div>
        </div>
        <% end %>
      </header>
    </div>
    <div class='col-5'>
      <body>
        <div class='continer'>
        <div class='card'>
          <div class='card-body'>
            <h5>
              <strong>
                <%= @page.to_s.split("/")[0].capitalize %>
              </strong>
            </h5>
          </div>
        </div>
        <%= erb :'forms/peep_form' if @user %>
        <% puts @directory %>
        <%= erb @directory %>
      </body>
    </div>
    <div class='col-4'></div>
  </div>
</div>
