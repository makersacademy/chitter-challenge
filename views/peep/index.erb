<h2>Chitter Timeline</h2>
<% if current_user %>
Welcome <%= current_user.username %>
<% end %>

<% if flash[:logout] %>
  <%= flash[:logout] %>
<% end %>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      <%= current_user.username %>
      <br>
      Peep: <%= peep.peep %>
      <br>
      Time:   <%= peep.time   %>
    </li>
  <% end %>
</ul>
