<form action="/users/new" >
  <input type="submit" id="Sign Up" value="Sign Up">
</form>
<% if @user %>
  <h1>Hello <%=@user.username%></h1>
<% end %>
<div class="peep-box">
  <form action="/peep" method="POST">
    <input name="content" style="height: 50px; width: 150px;">
    <input type="submit" value="Submit" id="Submit">
  </form>
</div>
<div class="peeps">
  <%@peeps.each do |peep| %>
    <div class="peep">
      <div class="peep-content">
        <%=peep.content%>
      </div>
      <div class="peep-date">
        <%=peep.date%>
      </div>
    </div>
  <%end%>
</div>