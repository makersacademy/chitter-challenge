<form method="POST" action="/peeps">
  <h1>Send a peep!</h1>
    <div>
      <label>Compose:</label>
      <input type="text" name="content" maxlength="140"
      onpaste="return false;"
      ondrop="return false;"
      autocomplete="off"/>
    </div>

    <div>
      <label>Who's peeping?</label>
      <select name="user_id">
        <% @users.each do |user| %>
          <body>
            <option value=<%= user.id %>><%= user.username%></option>
            <% end %>
          </body>
      </select>
    </div>
    <a href='../'>
      <input type="submit">
    </a>
</form>

