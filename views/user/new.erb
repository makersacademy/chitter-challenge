<div class='container user-registration'>
  <form action='/user' method='post'>
    <div class='legend col-xs-12 col-sm-12 col-md-10'>
      <h1> Log in to Chitter</h1>
    </div>
    <div class='form-group row'>
      <div class='col-sm-12 col-md-10'>
        <input class="form-control" type='text' id='name' required placeholder='First name' name='username'>
        <input class="form-control mt-1" type='text' id='lastname' required placeholder='Last name' name='lastname'>
        <input class="form-control mt-1" type='email' id='email' required placeholder='Email' name='email'>
        <input class="form-control mt-1" type='password' id='password' required placeholder='Password' name='pass'>
        <input class="form-control mt-1" type='password' id='confirm_password' required placeholder='Confrim password'>
        <input class='btn btn-outline-success btn-block mt-1' type='submit' id='submit'>
        <hr>
        <span class='text-muted'>Already have an account? <a href='#'>Log in now Â» </a></span>
      </div>
    </div>
  </form>
</div>



