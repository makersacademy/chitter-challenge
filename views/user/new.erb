<form action='/user' class="signup-form__container" method='post'>
  <fieldset class="signup-form__border">
    <h2> Sign up </h2>
    <label for="username">Username:</label><br>
    <input type="text" class="signup-form" name="username" required><br>
    <label for="email">email:</label><br>
    <input type="email" class="signup-form" name="email" required><br>
    <label for="first_name">First name:</label><br>
    <input type="text" class="signup-form" name="first_name" required><br>
    <label for="last_name">Last name:</label><br>
    <input type="text" class="signup-form" name="last_name" required><br>
    <label for="password">Password:</label><br>
    <input type="password" class="signup-form" name="password" required><br><br>
    <input type="submit" class="signup-button" value="Create account">
  </fieldset>
</form>
