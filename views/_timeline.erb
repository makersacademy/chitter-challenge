<div class="bg-light rounded p-3 pt-3">
  <div class="d-flex flex-row justify-content-between">
    <h4 style="font-family: 'Raleway', sans-serif;">Timeline</h4>
    <h4><i class="bi bi-stars"></i></h4>
  </div>
  <% if @user %>
    <%= partial :new_peep %>
  <% end %>
  <div class="list-group">
    <% @peeps.each do |peep| %>
      <a href="#" class="list-group-item list-group-item-action d-flex gap-3 mt-2 rounded py-3" aria-current="true">
        <img src="<%= image_picker(peep.user_id)%>" alt="twbs" width="50" height="50"
        class="rounded-circle avatarImage flex-grow-0">
        <div class="d-flex flex-column gap-2 w-100 justify-content-between">
          <div class="d-flex flex-row justify-content-between">
            <div class="d-flex flex-column flex-lg-row">
              <h6 class="mb-0 "><%= peep_name(peep.user_id) %></h6>
              <div class="m-1 d-none d-lg-block"></div>
              <small class="mb-0 text-muted">@<%= peep_username(peep.user_id) %></small>
            </div>
            <small class="opacity-50 text-muted text-nowrap"><%= format_time(peep.time) %></small>
          </div>
          <div>
            <small class="mb-0 opacity-75"><%= peep.text %></small>
          </div>
        </div>
      </a>
    <% end %>
  </div>
  <style type="text/css">
    .avatarImage {
    object-fit: cover
    }
  </style>
</div>
