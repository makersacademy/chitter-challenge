#signup{
  position: absolute;
  top: 160px;
  text-align: center;
  width: 100%;
  border: none;
  text-align: center;
  display: inline-block;
}
#home{
  position: absolute;
  left: 265px;
  top: 450px;
  text-align: center;
  height: 100px;
  width: 500px;
  border: none;
  text-align: center;
  display: inline-block;
}
input[type=submit] {
  color: tomato;
  font-family: "Brush Script MT", cursive;
  font-size: 20px;
  width: 70px;
  background-color: black;
  padding: 0;
  margin: 0;
  border-radius: 4px;
  border: medium solid tomato;
  }

  input[type=email] {
    color: tomato;
    font-family: "Impact";
    font-size: 20px;
    width: 200px;
    background-color: black;
    padding: 0;
    margin: 0;
    border-radius: 4px;
    border: medium solid tomato;
    text-align: center;
    }

    input[type=password] {
      color: tomato;
      font-family: "Impact";
      font-size: 20px;
      width: 200px;
      background-color: black;
      padding: 0;
      margin: 0;
      border-radius: 4px;
      border: medium solid tomato;
      text-align: center;
      }
      input[type=text] {
        color: tomato;
        font-family: "Impact";
        font-size: 20px;
        width: 200px;
        background-color: black;
        padding: 0;
        margin: 0;
        border-radius: 4px;
        border: medium solid tomato;
        text-align: center;
        }
        #error_tittle{
          position: absolute;
          top: 130px;
          left: 250px;
          text-align: center;
          height: 120px;
          width: 100%;
          border: none;
          color: tomato;
          font-family: "Brush Script MT", cursive;
          font-size: 30px;
        }
</style>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% if flash[:errors] && !flash[:errors].empty? %>
      <h4 id='error_tittle'>Check this errors:</h4>
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
    <h1 id='tittle'>Please sign up</h1>
      <div id='signup'>
      <form action = '/users/new' method = 'post'>
        <label for='name'>
          <input type = 'text' name = 'name' value = '<%= @user.name %>'placeholder="ENTER NAME"><br><br>
        </label>
        <label for='email'>
          <input type = 'email' name = 'email' value = '<%= @user.email %>' placeholder="ENTER EMAIL" required><br><br>
        </label>
        <label for='username'>
          <input type = 'text' name = 'username' value = '<%= @user.username %>' placeholder="ENTER USERNAME"><br><br>
        </label>
        <label for='password'>
          <input type = 'text' name = 'password' placeholder="ENTER PASSWORD"><br><br>
        </label>
        <label for='password_confirmation'>
          <input type = 'password' name = 'password_confirmation' placeholder="ENTER PASSWORD"><br><br>
        </label>
        <input type = 'submit' value = 'Sign up!'>
      </form>
    </div>
    <div id='home'>
      <form action='/'>
          <input type='submit' value='Home'>
      </form>
    </div>
  </body>
</html>
