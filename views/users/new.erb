<h2>New User Registration</h2><br>

<h2>
  <%= flash[:notice] %>
</h2>

<div >
  <form action="/users" method="post">
    <table id="registration_border">
      <tr><td>Email:</td><td style="text-align:left"><input type="email" name="email"  maxlength="60" /></td></tr>
      <tr><td>Name:</td><td style="text-align:left"><input type="text" name="name" maxlength="30"/></td></tr>
      <tr><td>User Name:</td><td style="text-align:left"><input type="text" name="user_name" maxlength="30"/></td></tr>
      <tr><td>Password:</td><td style="text-align:left"><input type="password" name="password" maxlength="140" /></td></tr> 
    </table>
    <br>
    <input type="submit" value="Sign Up!" />
  </form>
</div>