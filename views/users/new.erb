<h2>New User Registration</h2><br>

<h2>
  <%= flash[:notice] %>
</h2>
<div>
  <form action="/users" method="post">
    Email: <input type="email" name="email" maxlength="60" /><br>
    Name: <input type="text" name="name" maxlength="30"/><br>
    User Name: <input type="text" name="user_name" maxlength="30"/><br>
    Password: <input type="password" name="password" maxlength="140" /><br><br>

    <input type="submit" value="Sign Up!" />
  </form>
</div>