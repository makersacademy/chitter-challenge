<link rel="stylesheet" type="text/css" href="/css/style.css">

<% if @user.nil? %>

  <h1> Sign up to Chitter! </h1>

    <form action='/sessions/new' method='post'>
      <input id='username' type='text' name='username' placeholder='Username'required>
      <br>
      <input id='email' type='text' name='email' placeholder="Email address" required>
      <br>
      <input type='password' name='password' placeholder="Password" required>
      <br>
      <input type='password' name='password_confirmation' placeholder="Reconfirm password" required>
      <br>
      <input type="submit" value="Sign Up" >
    </form>  


<% else %>

  <h2>You are already signed in. Sign out to create a new account.</h2>

<% end %>


