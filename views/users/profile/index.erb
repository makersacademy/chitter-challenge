<html>

<head>
  <link href="/style.css" rel="stylesheet" type="text/css">
</head>

<body>


  <header>
    <div id="welcome-message">
      <h1>You are viewing <%= @user.display_name %>'s peeps</h1>
    </div>
    <div class="user-actions">
      <a href="/chitter">Return Home</a>
    </div>
  </header>
  <main>

    <% if @user %>
    <div @class="new-peep">
      Post a new peep!
      <form action="/peeps/new" method="post">
        <label>Peep content:<input name="content" type="text"></label>
        <button type="submit">Post Peep!</button>
      </form>
    </div>
    <% end %>


    <%= erb :'/partials/latest_peeps' %>

  </main>

</body>
</main>

</html>