<html>
  <head></head>
    <body>
       <style>
       
        div.a {text-align: center;
        }
        div.b {
          font-family: Arial, Tahoma, Serif;
        }
        div.rectangle {
          height: 100%;
          width: 400px;
           margin-left: auto;
          margin-right: auto;
          background-color: lightcyan;
        }
      </style>
  <div class="b"><div class="a"><div class="rectangle"><h1> Peeps </h1>
      <h3><a href="/">Back to homepage</a></h3>
      <% if session[:user] != nil %>
      <h3><a href="/peeps/new">Add a new peep</a></h3>
      <% end %>
      <% @peeps.sort_by{|record| record.date_time}.reverse.each do |record| %>
      <div>
      <% user = @users.find { |user| user.id == record.user_id } %>
      <b><%= user.name%> <font size="-1">&#40; @<%= user.username %> &#41;</b></font>
      <br>
      <%= record.content %> - <font size="-2"><%= record.date_time %></font>
      </div>
      <br>
      <br>
      <% end %>
      </div></div></div></div>
    </body>
</html>