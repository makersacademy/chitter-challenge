<html>
  <head>
    <title>All Peeps</title>
  </head>
  <body>
    <h1>Peeps</h1>
    <div>
      <p>Total peeps: <%= @all_peeps.length %></p>
    </div>
    <div>
      <% @all_peeps.each do |peep| %>
        <h3>
          <%= peep.title %>
        </h3>
        <h4>
          <%= peep.content %>
        </h4>
        <p>
          <%= @maker_repo.find(peep.maker_id).username %>
        </p>
        <p>
          <%= peep.date_posted %>
        </p>
        <p>
          --------------------------
        </p>
      <% end %> 
    </div>
  </body>
</html>
