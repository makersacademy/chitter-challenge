<div class="peeps">
  <h1>🐦🐦 Chitter Feed 🐦🐦</h1>

  <a class="button create" href="/peeps/new">Create a new peep</a>

  <% if @peeps.empty? %>
  <p>There are no peeps yet.</p>
  <% else %>
  <ul>
    <% @peeps.each do |peep| %>
    <li>
      <h2><%= peep.message %></h2>
      <p><%= peep.timestamp %></p>
      <div class="author">
        <p>🐤 <%= peep.user.username %></p>
        <p>name: <%= peep.user.name %></p>
      </div>
      <div class="replies">
        <a href="/peeps/<%= peep.id %>">Reply</a>
        <% if peep.reply_count == 1 %>
        <a href="/peeps/<%= peep.id %>"><%= peep.reply_count %> reply</a>
        <% elsif peep.reply_count > 1 %>
        <a href="/peeps/<%= peep.id %>"><%= peep.reply_count %> replies</a>
        <% end %>
      </div>
    </li>
    <% end %>
  </ul>
  <% end %>
</div>
