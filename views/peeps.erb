<html>
    <head></head>
    <body>
        <h1>Welcome to Chitter</h1>

        <form action="/peeps/new">
            <input type="submit" value="Post Peep" />
        </form>
        
        <form action="/signup">
            <input type="submit" value="Sign Up" />
        </form>

<% if session[:user_id] == nil %>
        <form action="/login">
            <input type="submit" value="Login" />
        </form>
<% else %>
        <form action="/logout">
            <input type="submit" value="Logout" />
        </form>
                <% end %>

        <% @sorted_peeps.each do |peep| %>
        <div>
        <% @users.each do |user| %>
        <% if user.id == peep.user_id%>
            <ul><%= peep.content %> - <%= peep.peep_time %> - By: <%= user.name %>, AKA @<%= user.username %></ul>
            <% end %>
        </div>
        <% end %>
        <% end %>
    </body>
</html>