<html>
  <body> 
    <% if @user != nil %>
    <h1> Welcome, <%= @user.username %> </h1>
    <h3> Email: <%= @user.email%> </h3>
    <h2> Your Chitter Feed: </h2><br>
    <% else %>
    <h2> The Chitter Feed: </h2>
    <% end %>
    <ul>
      <% @peeps.each do |peep| %>
        <li class="peep" id="peep-<%= peep.id %>">
          <%= peep.name %> peeped <%= peep.content %> at <%= peep.time[0..18]%>
        </li> 
      <% end %> <br>
    </ul>
    <form action="/peeps/new" method="get">
        <input type="submit" value="Post Peep"/>
    </form>
  </body>
</html>