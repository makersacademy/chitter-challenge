<% @peeps.each do |peep| %>
  <div class='peep' id='peep-<%= peep.id %>'>
    <div class='card'>
      <div class=card-body>
        <%= peep.content %>
      </div>
      <div class='created-at text-muted'>
        <small>
          posted  <%= peep.created_at.strftime('%H:%M  %d/%m/%Y') %>
        </small>
      </div>
    </div>
  </div>
<% end %>