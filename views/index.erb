<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chitter</title>
  </head>
  <body>
    <h1>WELCOME TO CHITTER</h1>
    <% unless @session_is_open %>
      <div>
        <a href="/login">Log in</a>
      </div>
      <div>
        <a href="/signup">Create account</a>
      </div>
    <% end %>
    
    <form action="/find_user" method="post">
      <label for="search_user"></label>
      <input type="text" id="search_user" name="search" placeholder="Find a user">
      <p><%= @message unless @message.nil? %></p>
    </form>

    <% if @session_is_open %>

      <p>Hi, <%= @user.username %>!</p>
      <div>
        <a href="/logout">Log out</a>
      </div>

      <form action="/new_peep" method="post">
        <label for="new_peep"></label>
        <input type="text" id="new_peep" name="new_peep" placeholder="Chit-chat here">
      </form>

    <% end %>

    <% @peeps.each do |peep| %>
      <div>
        <p><%= peep.time %></p>
        <%# implement here name of OP %>
        <p><%= peep.content %></p>
        <p><time datetime="<%= peep.time %>"></time></p>
      </div>
    <% end %>
  </body>
</html>

