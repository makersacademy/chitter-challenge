<h1>Chit chat</h1>
<br>
  <form action='/signup' method='get'>
  <input type="submit" value="Sign up">
  </form>
<br>

<br>
  <form action='/signin' method='get'>
  <input type="submit" value="Sign in">
  </form>
<br>

<form action="/peeps" method="post">
  <div>
  <textarea cols="50" row="5" name="content" placeholder="insert peep here">
  </textarea>
  <br>
  <input type="submit" value="Submit peep">
  </div>
</form>

<% @peeps.reverse.each do |peep|%>
  <br>
  <%= peep.content %>
  <%= peep.created_at %> 
  <br> 
<% end %>



