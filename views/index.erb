<div>
  <% if @logged_in_user %>
    <h2>Welcome <%= @logged_in_user.name %>!</h2>
    <a href="/logout">logout</a>
    <form action="/post-peep" method="POST">
      <input type="text" name="peep" maxlength="280" />
      <input type="text" name="tags" />      
      <input type="submit" value="post" />
    </form>
  <% else %>
    <a href="/sign-up">sign up</a>
    <a href="/log-in">log in</a>
  <% end %>
</div>
<div>
  <% @peeps.reverse_each do |peep| %>
    <div class="peep">
      <h3><%= peep.user.name %> - @<%= peep.user.username %></h3>
      <p><%= peep.time %></p>
      <p><%= peep.content %></p>
      <p><% peep.tagged_users.each do |tag| %>
            @<%= tag %> 
         <% end %>
      </p>
    </div>
  <% end %>
</div>