<html>
  <head>
  </head>
  <body bgcolor="lightblue" style="text-align:center">
    <br/>
    <h1>Chitter</h1>
    <form action="/peep" method="post" >
      <!-- <input type='text' name='peep' style="width:300px" /> -->
      <textarea type='text' name='peep' rows="4" cols="40" placeholder="Peep here.."></textarea>
      <br/>
      <input type='submit' value='Submit Peep' />
    </form>
    <br/>
    <h1>Peep wall</h1>
    <% @peeps.each do |peep| %>
      <div>
        <blockquote>
        <%= peep.content %>
          </blockquote>
        <%= peep.creation_time.strftime "%a %b %d, %H:%M" %>
        <% end %>
      </div>
  </body>
</html>
