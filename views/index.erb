<h1>Chitter</h1>

<% if @user %>
  <h1>Hello, <%= @user.email %></h1>
<% end %>

<ul>
  <% @peeps.each do |peep| %>
    <li><%= peep.post %><br>
      <%= peep.time %><br>
    </li>
  <% end %>
</ul>

<form action="/peeps" method="post">
  <input type="text" name="new_peep" placeholder="What's on your mind?">
  <input type="submit" value="Post Peep">
</form>
