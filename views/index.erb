<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="css/chitter.css">
  <title>Chitter</title>
</head>

<body class="bg-black">

  <!-- Page content -->
  <div class="content bg-black border-bottom border-light">

    <div class="row pb-4 mb-1">
      <h1><img src="images/white.png" width="40" height="40" alt="logo">Chitter</h1>
      <br>

      <form class="row align-items-center" method="POST" action="/peep">
        <div class="col-10 ps-3">
          <input type="text" name='message' id="message" required maxlength="140" minlength="1" class="form-control message"
            placeholder="What's on your mind?" />
        </div>
        <div class="col-2">
          <button type="submit" class="btn btn-primary"><img src="images/white.png" width="20" height="20" class="ml-1" alt="logo">
            Peep</button>
        </div>
      </form>
    </div>
    
    <div class="row">
      <% @peeps.each do |peep| %>
        <div class="card col-11 mt-1 mb-1 ms-3 bg-dark peep-card">
          <div class="peep-user"><span class="peep-text">Tim</span></div>
          <div class="peep-post"><span class="peep-text">
              <%= peep.message %>
            </span></div>
          <div class="peep-time"><span class="peep-text">
              <%= peep.time_stamp %>
            </span></div>
        </div>
        <% end %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>