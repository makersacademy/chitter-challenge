<html>
  <h1>Chitter: look at these peeps</h1>
  <% @peeps.each do |peep| %>
    <li class="peep" id="peep-<%= peep.id %>">
      <%= peep.message %> - <%= peep.created_at %>
    </li>
  <% end %>
  <br>
  <form action="/" method="post">
    <input type="text" name="message">
    <input type="submit" value="Peep!">
  </form>
</html>
