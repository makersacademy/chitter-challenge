<h1> Chitter Feed </h1>

<form action="/feed" method="post">
    <input type="text" name="tweet">
  <input type="submit" value="Tweet!">
</form>

<ul id='feed'>
  <% @posts.reverse.each do |post| %>
    <li>
      <h2><%= post.tweet %></h2>
      <h4><%= post.created_at %></h4>
    </li>
  <% end %>
</ul>
