<h1>Chitter</h1>

<form action="/peeps" method="post">
  <label for="peep">What are you doing?</label>
  <input type="text" id="peep" name="peep">
  <input type="submit" value="Peep">
</form>

<h2>Recent Peeps</h2>

<% @peeps.each do |peep| %>
  <div class="peep">
    <span class="timestamp"><%= peep.timestamp.strftime("%H:%M:%S on %B %d, %Y") %></span>
    <p><%= peep.text %></p>
  </div>
<% end %>





