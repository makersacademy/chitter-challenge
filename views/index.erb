<!DOCTYPE html>
  <head>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <table>
      <div>
        <ul class="nav_menu_links">
          <% if session[:user_id] %>

          <% else %>
            <li><a href="/login">Login</a></li>
          <% end %>
        </ul>
      </div>
        
      <% if session[:user_id] %>
        <form method="POST" action="/peep">
        <label for="message">Peep away...!</label><br>
        <input type="text" name="message" />
        <input type="submit" />
      <% end %>
      <% @all_peeps.each do |peep| %>
        <tr>
          <td>Author: @<%= peep.user.username%> - <%= peep.user.name%></td>
        </tr>
        <tr>
          <td><%= peep.message %></td>
        </tr>
        <tr>
          <td>On <%= peep.posted_at %></td>
        </tr>
      <% end %>
    </table>
  <body>
</html>
