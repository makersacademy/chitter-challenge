<h1>Welcome to Chitter!</h1>

<% if @user %>
  <h2>You are signed in as <%= @user.username %></h2>
  <form action='/posts' method='post'>
    <label for="peep">What do you want to say?</label>
    <input type='text' name='peep' />
    <label for="username">What is your username?</label>
    <input type='text' name='username' />
    <input class='btn btn-primary' type='submit' value='Post' />
  </form>
<% else %>
  <h3>You need to sign up before you can start posting</h3>
  <form action='/users/new' method='post'>
    <input class='btn btn-primary' type='submit' value='Sign Up'>
  </form>
<% end %>

<a href='/posts'>View previous peeps here</a>
