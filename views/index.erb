<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Homepage</title>
</head>
<body>
  <h1>Chitter</h1>

  <% @peeps.zip(@name, @username).reverse_each do |peep, name, username| %>
    <p><%=name%> | <em>@<%=username%></em></p>
    <a href="/peep/<%=peep.id%>"><%=peep.content%></a>
    <br />
    <% end %>
</body>
</html>