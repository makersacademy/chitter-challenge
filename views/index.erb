<h1>Chitter</h1>

<form action='/create-peep' method='post'>
  <input type='text' name='peep' placeholder="What's happening?"/>
  <input type='submit' value='Post' />
</form>

<ul>
  <% @peeps.each do |peep| %>
    <li class="peep" id="peep-<%= peep.id %>">
      <%= peep.peep %>
      <div class="timestamp" id="peep-<%= peep.id %>">
        Posted at: <%= peep.timestamp %>
      </div>
    </li>
  <% end %>
</ul>