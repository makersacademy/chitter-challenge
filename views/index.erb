<html>
<head>
  <title>Chitter!</title>
</head>
<body>
  <h1>Welcome to Chitter</h1>

  <form action="/chitter" method="POST">
    <input type="text" name="peep_text" placeholder="Enter peep here...">
    <input type="submit" value="Submit">
  </form>

  <ul>
    <% @peeps.reverse_each do |peep| %>
      <li id="peep-<%= peep.id %>">
        <%= peep.text %>
        <%= peep.time %>
      </li>
    <% end %>
  </ul>

</body>
</html>
