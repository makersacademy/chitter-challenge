<head>
  <title>Chitter</title>
  <link rel="stylesheet" href="/stylesheets/index.css" />
  <link rel="stylesheet" href="/stylesheets/site.css" />
  <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
</head>
<header class="nav">
  <div class="navHome"><a href="/"><img src="" />Home</a></div>
  <div class="navHome"><a href="/peep-form">Add</a></div>
  <div class="navSignUp"><a href="/sign-up">Sign up</a></div>
</header>
<body>
  <div class="innerBody">
    <h2>Peep Board</h2>

    <div class="blockContainer">
      <div class="blockHeader">
        <h3>Peeps</h3>
      </div>
      <div class="messagesSection">
        <% if @peeps.length != 0 %>
          <% @peeps.each do |peep| %>
            <div class="messageBlock">
              <p class="timestamp"><%= peep.time_stamp%></p>
              <p><%= peep%></p>
            </div>
          <% end%>
      <% else%>
        <div class="messageBlock">No peeps</div>
      <% end%>
      </div>
    </div>
  </div>
</body>
