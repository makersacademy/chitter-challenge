<style>
  h1 {
    background: #294936;
    color: white;
    text-align: center;
  }

  .button {
    background-color: #AEF6C7;
    border-radius: 10px;
    color: #212922;
    padding: 10px 18px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
  }

  ul {
    background: #294936;
    border-radius: 10px;
    padding: 10px;
    width: 33%;
    min-width: 300px;
    text-align: center;
    align-self: center;
    list-style: none;
    margin: auto;
  }

  ul li {
    background: #5B8266;
    border-radius: 10px;
    margin: 10px;
    padding: 7px;
  }
</style>

<h1>Chitter</h1>

<% if @user %>
  <h2>Welcome, <%= @user.name %></h2>
<% end %>

<form action="/message">
  <input type="submit" class="button" value="Post">
</form>

<form action="/registration">
  <input type="submit" class="button" value="Sign up">
</form>

<ul>
  <% @messages.each do |message| %>
  <li><%= message.time %>:   <%= message.message %></li>
  <% end %>
</ul>
