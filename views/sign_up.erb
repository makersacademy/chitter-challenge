<body style="text-align: center; background-color: #B0B0B0; font-family: DejaVu Sans mono, monospace">

  <form action="/sign_up" method="post">
    <p>Email:</p>
    <input type="text" name="email">
    <p>Password:</p>
    <input type="text" name="password">
    <p>Name:</p>
    <input type="text" name="name">
    <p>Username:</p>
    <input type="text" name="username">
    <input type="submit" value="Sign Up" style="border: none; color: white; background-color: #00BFFF; border-radius: 4px; padding: 4px 10px; margin: 4px 2px; cursor: pointer">
  </form>

  <%= flash[:signup_error] %>

</body>
